<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- $Revision$ -->
    <!-- $URL$ -->
    <!-- $Date$ -->
    <!-- $Author$ -->
    
    <!-- 
        Executor to change reference properties.
    -->
    <bean id="referencePropertiesExecutor"
        class="ch.elca.el4j.apps.refdb.gui.executors.ReferencePropertiesExecutor"
        scope="prototype">
        <property name="beanPropertiesForms">
            <!--
                Displayed property forms. Here only one is diplayed for all 
                reference properties.
            -->
            <ref local="referenceFormAll" />
        </property>
    </bean>

    <!-- 
        Form that describs which reference properties should be displayed.
    -->
    <bean id="referenceFormAll"
        class="ch.elca.el4j.services.gui.richclient.forms.BeanPropertiesForm"
        scope="prototype">
        <property name="shownBeanProperties">
            <!--
                Are the shown bean properties. The order is the same in 
                dialog.
            -->
            <list>
                <value>key</value>
                <value>name</value>
                <value>description</value>
                <value>incomplete</value>
                <value>version</value>
                <value>hashValue</value>
                <value>date</value>
                <value>whenInserted</value>
            </list>
        </property>
        <property name="readOnlyBeanProperties">
            <!--
                Are shown but read only bean properties.
            -->
            <list>
                <value>key</value>
                <value>whenInserted</value>
            </list>
        </property>
    </bean>
</beans>
