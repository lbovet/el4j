<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- $Revision$ -->
    <!-- $URL$ -->
    <!-- $Date$ -->
    <!-- $Author$ -->
    
    <bean id="xfireWithContextCalculatorExporter" class="ch.elca.el4j.services.remoting.RemotingServiceExporter">
        <property name="remoteProtocol">
            <ref bean="xFireProtocol" />
        </property>
        <property name="serviceInterface">
            <value>ch.elca.el4j.demos.remoting.Calculator</value>
        </property>
        <property name="serviceName">
            <value>Calculator.XFireWithContext.Benchmark</value>
        </property>
        <property name="service">
            <idref bean="xfireCalculatorImpl"/>
        </property>
    </bean>
    
    <bean id="xfireWithoutContextCalculatorExporter" 
          name="/Calculator.XFireWithoutContext.Benchmark"
          class="org.codehaus.xfire.spring.remoting.XFireExporter">
        <property name="xfire">
            <ref bean="xfire"/>
        </property>
        <property name="serviceBean">
            <ref bean="xfireCalculatorImpl"/>
        </property>
        <property name="serviceFactory">
            <ref bean="xfire.serviceFactory"/>
        </property>
        <property name="serviceClass">
            <value>ch.elca.el4j.demos.remoting.Calculator</value>
        </property>
    </bean>

    <bean id="xfireCalculatorImpl" class="ch.elca.el4j.demos.remoting.impl.CalculatorImpl" />
</beans>