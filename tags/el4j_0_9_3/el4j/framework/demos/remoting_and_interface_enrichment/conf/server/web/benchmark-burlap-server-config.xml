<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    
    <!-- Version: $Revision$ -->
    <!-- Source: $Source$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->
    
    <bean id="burlapWithContextCalculatorExporter" class="ch.elca.el4j.services.remoting.RemotingServiceExporter">
        <property name="remoteProtocol">
            <ref bean="burlapProtocol" />
        </property>
        <property name="serviceInterface">
            <value>ch.elca.el4j.demos.remoting.Calculator</value>
        </property>
        <property name="serviceName">
            <value>Calculator.BurlapWithContext.Benchmark</value>
        </property>
        <property name="service">
            <idref bean="burlapCalculatorImpl"/>
        </property>
    </bean>
    
    <bean id="burlapWithoutContextCalculatorExporter" name="/Calculator.BurlapWithoutContext.Benchmark" class="org.springframework.remoting.caucho.BurlapServiceExporter">
        <property name="serviceInterface">
            <value>ch.elca.el4j.demos.remoting.Calculator</value>
        </property>
        <property name="service">
            <ref bean="burlapCalculatorImpl"/>
        </property>
    </bean>
    
    <bean id="burlapCalculatorImpl" class="ch.elca.el4j.demos.remoting.impl.CalculatorImpl" />
</beans>
