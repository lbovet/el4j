<?xml version="1.0" encoding="UTF-8"?>
<pages xmlns="http://jboss.com/products/seam/pages"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:f="http://java.sun.com/jsf/facelets"
	   xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd"

	   no-conversation-view-id="/main.xhtml"
				 login-view-id="/main.xhtml">

	<page view-id="/main.xhtml">
	
		<navigation>
			<rule if="#{identity.loggedIn}">
				<redirect view-id="/main.xhtml"/>
			</rule>
		</navigation>
		
	</page>
	
	<page view-id="*">
	
		<navigation from-action="#{identity.logout}">
			<redirect view-id="/main.xhtml"/>
		</navigation>
		
	</page>
	
	
	<!--  for holiday example -->
   
	<page view-id="/login_holiday.xhtml">-->
	
		<navigation>
		  <rule if-outcome="holiday">
			<redirect view-id="/index_holiday.xhtml"/>
		  </rule>
		</navigation>
		
	</page>
	
	<page view-id="/index_holiday.xhtml">
	
		<navigation>
		  <rule if-outcome="logout">
			<redirect view-id="/login_holiday.xhtml"/>
		  </rule>
		</navigation>
		
		
<!--        <navigation from-action="#{loginAction.logout}">-->
<!--            <redirect view-id="/login_holiday.xhtml"/>-->
<!--        </navigation>-->
	</page>
	
	<!-- the whole navigation is handled by a jpdl pageflow so there is
	no need to define anything here -->
	
</pages>
