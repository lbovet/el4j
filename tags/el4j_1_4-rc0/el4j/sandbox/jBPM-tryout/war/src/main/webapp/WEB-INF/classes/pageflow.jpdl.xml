<pageflow-definition 
        xmlns="http://jboss.com/products/seam/pageflow"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jboss.com/products/seam/pageflow 
                            http://jboss.com/products/seam/pageflow-2.0.xsd"
        name="holiday">

 
    <start-state name="indexStart">
		<transition name="startFlow" to="list">
		</transition>
	</start-state>
	
	<page name="index" view-id="/index_holiday.xhtml">
        
        <end-conversation/>
 
    </page>
    
    
	<page name="list" view-id="/requestList.xhtml">
	   
	    <redirect />
	    
        <transition name="toEvaluate" to="evaluate">
            <action expression="#{holidayAction.evaluateRequest}" />
        </transition>
        
		<transition name="toIndex" to="index"></transition>
		
		<transition name="toProvideDetails" to="provideDetails">
		  <action expression="#{holidayAction.provideDetails}" />
		</transition>
        
	</page>

	<page name="evaluate" view-id="/evaluateRequest.xhtml">
		<redirect />
		
		<transition name="toList" to="list">
		      <action expression="#{holidayAction.sendDecision}" />
		</transition>
		
		<transition name="requestDetails" to="list">
            <action expression="#{holidayAction.requestDetails}" />
        </transition>
		<transition name="toListCancel" to="list">
		  <action expression="#{holidayAction.cancelEvaluation}" />
		</transition>
        
	</page>
	<page name="provideDetails" view-id="/enterDetails.xhtml">
	    
	    <redirect/>
	
		<transition to="list" name="toList">
		  <action expression="#{holidayAction.sendDetails}" />
		</transition>
	</page>

	
</pageflow-definition>