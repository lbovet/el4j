<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- $Revision$ -->
    <!-- $URL$ -->
    <!-- $Date$ -->
    <!-- $Author$ -->

    <import resource="classpath:scenarios/common/remotingtests-jaxws-protocol-config.xml" />

    <!-- this "shakespeare" is generated by wsimport.
         Therefore no proxies should be generated. -->
    <bean id="shakespeare"
        class="ch.elca.el4j.services.remoting.RemotingProxyFactoryBean">
        <property name="remoteProtocol">
            <ref bean="jaxwsProtocol" />
        </property>
        <property name="serviceInterface">
            <value>
                com.xmlme.webservices.ShakespeareSoap
            </value>
        </property>
        <property name="protocolSpecificConfiguration">
        	<bean class="ch.elca.el4j.services.remoting.protocol.JaxwsProtocolConfiguration">
        		<property name="serviceImplementation">
        			<value>com.xmlme.webservices.Shakespeare</value>
        		</property>
        	</bean>
        </property>

    </bean>
</beans>


