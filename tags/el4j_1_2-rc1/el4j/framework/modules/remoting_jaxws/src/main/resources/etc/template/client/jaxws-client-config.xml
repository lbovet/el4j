<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- $Revision$ -->
    <!-- $URL$ -->
    <!-- $Date$ -->
    <!-- $Author$ -->

    <import
        resource="classpath:etc/template/common/protocols-config.xml" />

    <!-- Default JAX-WS Setup -->
    <bean id="calculator"
        class="ch.elca.el4j.services.remoting.RemotingProxyFactoryBean">
        <property name="remoteProtocol">
            <ref bean="jaxwsProtocol" />
        </property>
        <property name="serviceInterface">
            <value>
                ch.elca.el4j.tests.remoting.jaxws.service.Calculator
            </value>
        </property>
        <property name="serviceName">
            <value>Calculator.Jaxws.RemotingTemplate</value>
        </property>
    </bean>
    
    <!-- this calculator uses the classes generated by wsimport directly.
         Therefore no proxies should be generated. -->
    <bean id="calculatorGenerated"
        class="ch.elca.el4j.services.remoting.RemotingProxyFactoryBean">
        <property name="remoteProtocol">
            <ref bean="jaxwsProtocol" />
        </property>
        <property name="serviceInterface">
            <value>
                ch.elca.el4j.tests.remoting.jaxws.service.gen.CalculatorWS
            </value>
        </property>
        <property name="serviceName">
            <value>Calculator.Jaxws.RemotingTemplate</value>
        </property>
    </bean>
</beans>


