<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- $Revision$ -->
	<!-- $URL$ -->
	<!-- $Date$ -->
	<!-- $Author$ -->

	<import
		resource="classpath:scenarios/common/remotingtests-jaxws-protocol-config.xml" />
	
	<!-- JAX-WS Setup for clients that do not use generated code (using Spring remoting) -->
	<bean id="lazyPerson"
		class="ch.elca.el4j.services.remoting.RemotingProxyFactoryBean">
		<property name="remoteProtocol">
			<ref bean="jaxwsSpringProtocol" />
		</property>
		<property name="protocolSpecificConfiguration">
			<ref local="lazyPersonJaxwsProtocolSpecificConfiguration" />
		</property>
		<property name="serviceInterface">
			<value>ch.elca.el4j.tests.remoting.jaxws.service.LazyPerson</value>
		</property>
		<property name="serviceName">
			<value>LazyPerson.Jaxws.Remotingtests</value>
		</property>
	</bean>
	
	<bean id="lazyPersonJaxwsProtocolSpecificConfiguration" class="ch.elca.el4j.services.remoting.protocol.JaxwsSpringProtocolConfiguration">
		<property name="namespaceUri">
			<value>http://webservice.jaxws.remoting.tests.el4j.elca.ch/</value>
		</property>
		<property name="serviceName">
			<value>LazyPersonService</value>
		</property>
		<property name="portName">
			<value>LazyPersonPort</value>
		</property>
	</bean>
</beans>
