<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- $Revision$ -->
    <!-- $URL$ -->
    <!-- $Date$ -->
    <!-- $Author$ -->
    
    <!--  Server -->
    <bean id="rmiTestObjImpl" class="ch.elca.el4j.tests.services.remoting.loadbalancing.common.BusinessObjectImpl">
    <property name="serverName">
        <value>${rmi.host}:8089</value>
        </property>
    </bean>

    <bean id="rmiTestObjExporter" class="ch.elca.el4j.services.remoting.RemotingServiceExporter"
         lazy-init="false">
        <property name="serviceInterface">
            <value>ch.elca.el4j.tests.services.remoting.loadbalancing.common.BusinessObject</value>
        </property>
        <property name="service">
            <idref bean="rmiTestObjImpl"/>
        </property>
        <property name="remoteProtocol">
            <ref bean="rmiProtocol" />
        </property>
    </bean>
</beans>