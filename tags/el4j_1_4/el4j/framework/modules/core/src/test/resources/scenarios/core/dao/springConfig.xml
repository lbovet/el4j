<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:component-scan use-default-filters="false"
		annotation-config="false" base-package="ch.elca.el4j.tests.services.persistence.generic.dao">
		<context:include-filter type="annotation"
			expression="ch.elca.el4j.services.persistence.generic.dao.AutocollectedGenericDao" />
	</context:component-scan>

	<bean id="registry" class="ch.elca.el4j.services.persistence.generic.dao.impl.DefaultDaoRegistry"/>

</beans>