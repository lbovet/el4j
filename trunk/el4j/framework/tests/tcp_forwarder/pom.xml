<?xml version="1.0" encoding="UTF-8"?>
<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- $Revision$ -->
    <!-- $URL$ -->
    <!-- $Date$ -->
    <!-- $Author$ -->

    <parent>
        <groupId>ch.elca.el4j.tests</groupId>
        <artifactId>el4j-framework-tests</artifactId>
        <version>1.1.0-1</version>
    </parent>

    <artifactId>module-tcp_forwarder-tests</artifactId>
    <version>${version.module-tcp_forwarder-tests}</version>
    <packaging>jar</packaging>
    <name>EL4J test tcp forwarder</name>
    <description>
        Test module for tcp forwarder module of the EL4J framework.
    </description>
    <dependencies>
        <dependency>
            <groupId>ch.elca.el4j.modules</groupId>
            <artifactId>module-tcp_forwarder</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.elca.el4j.modules</groupId>
            <artifactId>module-webtest</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.elca.el4j.apps</groupId>
            <artifactId>keyword-core-tests</artifactId>
            <type>test-jar</type>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <configuration>
                    <mainClass>ch.elca.el4j.services.tcpforwarder.TcpForwarderRunner</mainClass>
                    <keepAlive>true</keepAlive>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>bridge-derby</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <configuration>
                            <arguments>
                                <argument>6786</argument>
                                <argument>1527</argument>
                            </arguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>bridge-oracle</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <configuration>
                            <arguments>
                                <argument>6786</argument>
                                <argument>tulipe.elca.ch:1521</argument>
                            </arguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
