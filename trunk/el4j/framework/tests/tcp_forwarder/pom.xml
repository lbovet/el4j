<?xml version="1.0" encoding="UTF-8"?>
<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- $Revision$ -->
    <!-- $URL$ -->
    <!-- $Date$ -->
    <!-- $Author$ -->

    <parent>
        <groupId>ch.elca.el4j.tests</groupId>
        <artifactId>el4j-framework-tests</artifactId>
        <version>1.2.1-SNAPSHOT</version>
    </parent>

    <artifactId>module-tcp_forwarder-tests</artifactId>
    <version>${version.module-tcp_forwarder-tests}</version>
    <packaging>jar</packaging>
    <name>EL4J test tcp forwarder</name>
    <description>
        Test module for tcp forwarder module of the EL4J framework.
    </description>
    <dependencies>
         <dependency>
            <groupId>ch.elca.el4j.modules</groupId>
            <artifactId>module-tcp_forwarder</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.elca.el4j.modules</groupId>
            <artifactId>module-webtest</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.elca.el4j.modules</groupId>
            <artifactId>module-database</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.elca.el4j.modules</groupId>
            <artifactId>module-env</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.elca.el4j.modules</groupId>
            <artifactId>module-hibernate</artifactId>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <!-- EL4J Database plugin to start and fill DB automatically -->
            <plugin>
                <groupId>ch.elca.el4j.maven.plugins</groupId>
                <artifactId>maven-database-plugin</artifactId>
                <executions>
                    <execution>
                        <configuration>
                            <connectionPropertiesSource>
                                scenarios/db/raw/module-tcp_forwarder-tests-override-{db.name}.properties
                            </connectionPropertiesSource>
                        </configuration>
                        <goals>
                            <goal>prepare</goal>
                        </goals>
                        <phase>pre-integration-test</phase>
                    </execution>
                </executions>
            </plugin>

            <!-- skip unit test run, tests to be executed during integration-test -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
                <executions>
                    <execution>
                        <id>surefire-it</id>
                        <phase>integration-test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <skip>false</skip>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <!-- Delete tables and stop Network Server -->
            <plugin>
                <groupId>ch.elca.el4j.maven.plugins</groupId>
                <artifactId>maven-database-plugin</artifactId>
                <executions>
                    <execution>
                        <configuration>
                            <db.connectionProperties>
                                scenarios/db/raw/module-tcp_forwarder-tests-override-{db.name}.properties
                            </db.connectionProperties>
                        </configuration>
                        <goals>
                            <goal>cleanUp</goal>
                        </goals>
                        <phase>post-integration-test</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <configuration>
                    <mainClass>ch.elca.el4j.services.tcpforwarder.TcpForwarderRunner</mainClass>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>bridge-derby</id>
            <activation>
                <property>
                    <name>db.name</name>
                    <value>db2</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <configuration>
                            <arguments>
                                <argument>6786</argument>
                                <argument>1527</argument>
                            </arguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>bridge-oracle</id>
            <activation>
                <property>
                    <name>db.name</name>
                    <value>oracle</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <configuration>
                            <arguments>
                                <argument>6786</argument>
                                <argument>tulipe.elca.ch:1521</argument>
                            </arguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
