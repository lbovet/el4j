<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- $Revision$ -->
    <!-- $URL$ -->
    <!-- $Date$ -->
    <!-- $Author$ -->
    
    <import
        resource="classpath:scenarios/common/remotingtests-xfire-protocol-config.xml" />

    <bean id="abstractXFireCalculatorExporter" abstract="true"
        class="ch.elca.el4j.services.remoting.RemotingServiceExporter">
        <property name="serviceInterface">
            <value>
                ch.elca.el4j.tests.remoting.service.Calculator
            </value>
        </property>
        <property name="service">
            <idref bean="xfireCalculatorImpl" />
        </property>
    </bean>

    <!-- XFire Default -->
    <bean id="xfireWithContextCalculatorExporter"
        parent="abstractXFireCalculatorExporter">
        <property name="remoteProtocol">
            <ref bean="xFireProtocol" />
        </property>
        <property name="serviceName">
            <value>Calculator.XFire.Remotingtests</value>
        </property>
    </bean>

    <!-- XFire Jaxb without annotations -->
    <bean id="xfireWithContextCalculatorExporterJaxb"
        parent="abstractXFireCalculatorExporter">
        <property name="remoteProtocol">
            <ref bean="xFireProtocolJaxb" />
        </property>
        <property name="serviceName">
            <value>Calculator.XFireJaxb.Remotingtests</value>
        </property>
    </bean>

    <!-- XFire Jaxb annotated -->
    <bean id="xfireWithContextCalculatorExporterJaxbAnnotated"
        parent="abstractXFireCalculatorExporter">
        <property name="remoteProtocol">
            <ref bean="xFireProtocolJaxb" />
        </property>
        <property name="serviceName">
            <value>Calculator.XFireJaxbAnnotated.Remotingtests</value>
        </property>
        <property name="service">
            <idref bean="xfireCalculatorImplAnnotated" />
        </property>
    </bean>

    <bean id="xfireCalculatorImplAnnotated"
        class="ch.elca.el4j.tests.remoting.service.impl.CalculatorImplAnnotated" />

    <bean id="xfireCalculatorImpl"
        class="ch.elca.el4j.tests.remoting.service.impl.CalculatorImpl" />
</beans>