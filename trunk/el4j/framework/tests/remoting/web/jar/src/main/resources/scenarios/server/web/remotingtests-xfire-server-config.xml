<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->
    
    <import resource="classpath:scenarios/common/remotingtests-xfire-protocol-config.xml"/>
    
    <!-- XFire Default -->
    <bean id="xfireWithContextCalculatorExporter" class="ch.elca.el4j.services.remoting.RemotingServiceExporter">
        <property name="remoteProtocol">
            <ref bean="xFireProtocol" />
        </property>
        <property name="serviceInterface">
            <value>ch.elca.el4j.tests.remoting.service.Calculator</value>
        </property>
        <property name="serviceName">
            <value>Calculator.XFire.Remotingtests</value>
        </property>
        <property name="service">
            <idref bean="xfireCalculatorImpl"/>
        </property>
    </bean>

    <bean id="xfireCalculatorImpl" class="ch.elca.el4j.tests.remoting.service.impl.CalculatorImpl" />
    
    <!-- XFire Jaxb without annotations -->
    <bean id="xfireWithContextCalculatorExporterJaxb" class="ch.elca.el4j.services.remoting.RemotingServiceExporter">
        <property name="remoteProtocol">
            <ref bean="xFireProtocolJaxb" />
        </property>
        <property name="serviceInterface">
            <value>ch.elca.el4j.tests.remoting.service.Calculator</value>
        </property>
        <property name="serviceName">
            <value>Calculator.XFireJaxb.Remotingtests</value>
        </property>
        <property name="service">
            <idref bean="xfireCalculatorImpl"/>
        </property>
    </bean>
    
    <!-- XFire Jaxb annotated -->
    <bean id="xfireWithContextCalculatorExporterJaxbAnnotated" class="ch.elca.el4j.services.remoting.RemotingServiceExporter">
        <property name="remoteProtocol">
            <ref bean="xFireProtocolJaxb" />
        </property>
        <property name="serviceInterface">
            <value>ch.elca.el4j.tests.remoting.service.Calculator</value>
        </property>
        <property name="serviceName">
            <value>Calculator.XFireJaxbAnnotated.Remotingtests</value>
        </property>
        <property name="service">
            <idref bean="xfireCalculatorImplAnnotated"/>
        </property>
    </bean>
    
    <bean id="xfireCalculatorImplAnnotated" class="ch.elca.el4j.tests.remoting.service.impl.CalculatorImplAnnotated" />
</beans>