<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" version="2.4">

    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->

	<context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            WEB-INF/remotingtests-servlet.xml
        </param-value>
    </context-param>
   
	<listener>
	    <listener-class>
	        org.springframework.web.context.ContextLoaderListener
	    </listener-class>
	</listener>
	
    <servlet>
        <servlet-name>remotingtests</servlet-name>
        <servlet-class>
            ch.elca.el4j.web.context.ModuleDispatcherServlet
        </servlet-class>
        <init-param>
            <param-name>allowBeanDefinitionOverriding</param-name>
            <param-value>false</param-value>
        </init-param>
        <load-on-startup>100</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>jaxws-servlet-spring</servlet-name>
        <servlet-class>
            ch.elca.el4j.services.remoting.servlet.WSSpringServlet
        </servlet-class>
        <load-on-startup>101</load-on-startup>
    </servlet>

    <!-- Used by Soap(Axis) test - ->
    <listener>
        <listener-class>org.apache.axis.transport.http.AxisHTTPSessionListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>AxisServlet</servlet-name>
        <servlet-class>org.apache.axis.transport.http.AxisServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <!- - Used to see all deployed services with its methods as list - ->
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>/servlet/AxisServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <!- - Url to deployed services - ->
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping> -->
    
    
    <!-- Used by Hessian, Burlap and xFire tests -->    
    <servlet-mapping>
        <servlet-name>remotingtests</servlet-name>
        <url-pattern>*.Remotingtests</url-pattern>
    </servlet-mapping>
    
    <!-- Used by Jaxws tests --> 
    <servlet-mapping>
        <servlet-name>jaxws-servlet-spring</servlet-name>
        <url-pattern>*.RemotingtestsJaxws</url-pattern>
    </servlet-mapping>

    <session-config>
        <!-- Default to 5 minute session timeouts -->
        <session-timeout>5</session-timeout>
    </session-config>
	
</web-app>
