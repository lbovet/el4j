<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>ch.elca.el4j.tests</groupId>
		<artifactId>module-offliner-tests</artifactId>
		<version>1.7-SNAPSHOT</version>
	</parent>

	<artifactId>module-offliner-tests-oracle</artifactId>
	<version>${version.module-offliner}</version>
	<name>EL4J test offliner oracle</name>
	<description>The oracle tests of module offliner.</description>

	<dependencies>
		<dependency>
			<groupId>ch.elca.el4j.modules</groupId>
			<artifactId>module-offliner</artifactId>
			<version>${version.module-offliner}</version>
		</dependency>
		
		<dependency>
			<groupId>ch.elca.el4j.modules</groupId>
			<artifactId>module-offliner</artifactId>
			<version>${version.module-offliner}</version>
			<type>test-jar</type>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>oracle</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<!--
						<configuration>
							<skip>true</skip>
						</configuration>
						-->
						<executions>
							<execution>
								<id>test</id>
								<phase>integration-test</phase>
								<goals>
									<goal>test</goal>
								</goals>
								<configuration>
									<skip>false</skip>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<!-- Start database and create tables. -->
					<plugin>
						<groupId>ch.elca.el4j.maven.plugins</groupId>
						<artifactId>maven-database-plugin</artifactId>
						<executions>
							
							<!-- Create local tables. This starts the database and executes a silent drop
								then a create. -->
							<execution>
								<id>prepare-local</id>
								<goals>
									<goal>prepare</goal>
								</goals>
								<phase>pre-integration-test</phase>
								<configuration>
									<sqlSourceDir>/etc/sql/general/, /etc/sql/${db.name}/, /etc/sql/${db.name}-offliner/</sqlSourceDir>
									<connectionPropertiesSource>local.properties</connectionPropertiesSource>
									<sqlFindReplacePattern>#START WITH 1#START WITH 2000000001 MINVALUE 2000000001 MAXVALUE 4000000000#</sqlFindReplacePattern>
								</configuration>
							</execution>
							
							<!-- Silent drop and create remote tables. -->
							<execution>
								<id>prepare-remote</id>
								<goals>
									<goal>silentDrop</goal>
									<goal>create</goal>
								</goals>
								<phase>pre-integration-test</phase>
								<configuration>
									<connectionPropertiesSource>remote.properties</connectionPropertiesSource>
									<sqlFindReplacePattern>#START WITH 1#START WITH 1 MINVALUE 1 MAXVALUE 2000000000#</sqlFindReplacePattern>
								</configuration>
							</execution>
							
							<!-- Drop tables in local but do not shutdown the database. -->
							<execution>
								<id>drop-local</id>
								<goals>
									<goal>drop</goal>
								</goals>
								<phase>post-integration-test</phase>
								<configuration>
									<sqlSourceDir>/etc/sql/general/, /etc/sql/${db.name}/, /etc/sql/${db.name}-offliner/</sqlSourceDir>
									<connectionPropertiesSource>local.properties</connectionPropertiesSource>
									<sqlFindReplacePattern>#START WITH 1#START WITH 2000000001 MINVALUE 2000000001 MAXVALUE 4000000000#</sqlFindReplacePattern>
								</configuration>
							</execution>
							
							<!-- Drop tables in remote. -->
							<execution>
								<id>cleanup-remote</id>
								<goals>
									<goal>drop</goal>
								</goals>
								<phase>post-integration-test</phase>
								<configuration>
									<connectionPropertiesSource>remote.properties</connectionPropertiesSource>
									<sqlFindReplacePattern>#START WITH 1#START WITH 1 MINVALUE 1 MAXVALUE 2000000000#</sqlFindReplacePattern>
								</configuration>
							</execution>
							
							<!-- Shutdown the database. -->
							<execution>
								<id>shutdown</id>
								<goals>
									<goal>stop</goal>
								</goals>
								<phase>post-integration-test</phase>
							</execution>
							
						</executions>
					</plugin>
					
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>startup</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>java</goal>
								</goals>
								<configuration>
									<mainClass>ch.elca.el4j.tests.services.persistence.hibernate.offlining.runner.TestStarter</mainClass>
									<cleanupDaemonThreads>false</cleanupDaemonThreads>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>shutdown</id>
								<phase>post-integration-test</phase>
								<goals>
									<goal>java</goal>
								</goals>
								<configuration>
									<mainClass>ch.elca.el4j.tests.services.persistence.hibernate.offlining.runner.TestStopper</mainClass>
									<cleanupDaemonThreads>true</cleanupDaemonThreads>
								</configuration>
							</execution>
						</executions>
					</plugin>
					
				</plugins>
			</build>
		</profile>

	</profiles>
</project>

