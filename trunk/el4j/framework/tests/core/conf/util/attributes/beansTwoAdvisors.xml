<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    
    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->
    
    <!--
        Define the autoproxy bean which looks for each advisor in this context.
    -->
    <bean id="autoproxy" 
        class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>

    <!-- Define the first Advisor bean. -->
    <bean id="genericAttributeAdvisorOne"
        class="ch.elca.el4j.util.attributes.GenericAttributeAdvisor">
        <property name="methodInterceptor">
            <ref local="exampleInterceptorOne"/>
        </property>
        <property name="interceptingAttributes">
            <list>
                <value>ch.elca.el4j.tests.util.attributes.ExampleAttributeOne</value>
            </list>
        </property>
        <property name="order">
            <value>1</value>
        </property>
    </bean>

    <!-- Define the second Advisor bean. -->
    <bean id="genericAttributeAdvisorTwo"
        class="ch.elca.el4j.util.attributes.GenericAttributeAdvisor">
        <property name="methodInterceptor">
            <ref local="exampleInterceptorTwo"/>
        </property>
        <property name="interceptingAttributes">
            <list>
                <value>ch.elca.el4j.tests.util.attributes.ExampleAttributeTwo</value>
            </list>
        </property>
        <property name="order">
            <value>2</value>
        </property>
    </bean>
    
    <!-- Define the interceptor to be used by the first advisor. -->
    <bean id="exampleInterceptorOne" 
        class="ch.elca.el4j.tests.util.attributes.ExampleInterceptor">
    </bean>

    <!-- Define the interceptor to be used by the second advisor. -->
    <bean id="exampleInterceptorTwo" 
        class="ch.elca.el4j.tests.util.attributes.ExampleInterceptor">
    </bean>

    <!--
        Define the bean which owns a method that should be intercepted.
    -->
    <bean id="foo" class="ch.elca.el4j.tests.util.attributes.FooImpl"/>
</beans>