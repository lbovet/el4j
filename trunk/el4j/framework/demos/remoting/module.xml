<?xml version="1.0"?>
<ant:project name="el4j" xmlns="antlib:ch.elca.el4ant" xmlns:ant="antlib:org.apache.tools.ant">
    <module name="module-remoting-demos">
        <eu name="gui">
            <attribute name="runtime.runnable" value="true"/>
            <attribute name="runtime.class" value="ch.elca.el4j.demos.remoting.benchmark.RemotingBenchmark"/>
            <attribute name="runtime.command.creator" value="runtime.command.creator.basic"/>
            <attribute name="compile.jar.excludes" value="**/server/web/*"/>

            <hook name="pre.start.[module].[eu]" target="runtime.hook.parallel-web.start" if="distdemo"/>
            <hook name="post.start.[module].[eu]" target="runtime.hook.parallel-web.stop" if="distdemo"/>
            <attribute name="parallel-web.deploytarget" value="deploy.war.module.eu.module-remoting-demos.web"/>
        </eu>
        <eu name="web">
            <attribute name="runtime.runnable" value="true"/>
            <attribute name="compile.jar.excludes" 
                value="**/benchmark/*,**/client/*,**/files/*,**/server/app/*"/>
            <attribute name="j2ee.war.application" value=""/>
            <attribute name="runtime.command.creator" value="runtime.command.creator.web"/>
        </eu>
        <attribute name="set" value="framework-demos"/>
        <dependency module="module-env"/>
        <dependency module="module-remoting_caucho"/>
        <dependency module="module-remoting_soap"/>
        <dependency module="module-remoting_xfire"/>
      </module>
</ant:project>
