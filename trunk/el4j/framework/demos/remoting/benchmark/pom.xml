<?xml version="1.0" encoding="UTF-8"?>
<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->

    <parent>
        <groupId>ch.elca.el4j.demos</groupId>
        <artifactId>el4j-framework-demos-remoting</artifactId>
        <version>1.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>module-remoting-demos-benchmark</artifactId>
    <version>${version.module-remoting-demos}</version>
    <packaging>jar</packaging>
    <name>EL4J module remoting benchmark</name>
    <description>
        Benchmark for remoting modules of the EL4J framework.
    </description>
    <dependencies>
        <dependency>
            <groupId>ch.elca.el4j.demos</groupId>
            <artifactId>module-remoting-demos-web-jar</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.elca.el4j.demos</groupId>
            <artifactId>module-remoting-demos-web-war</artifactId>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <scope>runtime</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <configuration>
                    <mainClass>ch.elca.el4j.demos.remoting.benchmark.RemotingBenchmark</mainClass>
                    <keepAlive>false</keepAlive>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>manuel</id>
        </profile>
        <profile>
            <id>auto</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.cargo</groupId>
                        <artifactId>cargo-maven2-plugin</artifactId>
                        <configuration>
                            <wait>false</wait>
                            <deployer>
                                <deployables>
                                    <deployable>
                                        <groupId>ch.elca.el4j.demos</groupId>
                                        <artifactId>module-remoting-demos-web-war</artifactId>
                                        <type>war</type>
                                        <properties>
                                            <context>module-remoting-demos-web</context>
                                        </properties>
                                        <pingURL>http://${jee-web.host}:${jee-web.port}/module-remoting-demos-web</pingURL>
                                        <pingTimeout>120000</pingTimeout>
                                    </deployable>
                                </deployables>
                            </deployer>
                        </configuration>
                        <executions>
                            <execution>
                                <id>start-container</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>undeploy</goal>
                                    <goal>start</goal>
                                    <goal>deploy</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>stop-container</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>stop</goal>
                                    <goal>undeploy</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>integration-test</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
