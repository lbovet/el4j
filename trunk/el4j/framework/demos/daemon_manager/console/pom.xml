<?xml version="1.0" encoding="UTF-8"?>
<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->

    <parent>
        <groupId>ch.elca.el4j.demos</groupId>
        <artifactId>el4j-framework-demos-daemon_manager</artifactId>
        <version>1.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>module-daemon_manager-demos-console</artifactId>
    <version>${version.module-daemon_manager}</version>
    <packaging>jar</packaging>
    <name>EL4J demo daemon manager console</name>
    <description>
        Demo console module for daemon manager module of the EL4J framework.
    </description>
    <dependencies>
        <dependency>
            <groupId>ch.elca.el4j.demos</groupId>
            <artifactId>module-daemon_manager-demos-common</artifactId>
            <type>jar</type>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <configuration>
                    <mainClass>ch.elca.el4j.demos.daemonmanager.Console</mainClass>
                    <keepAlive>false</keepAlive>
                </configuration>
            </plugin>
        </plugins>
    </build>
    
    <!--
        These profiles where added due to problem passing argument by system
        property. See following JIRA issue for more information:
        http://jira.codehaus.org/browse/MEXEC-5
     -->
    <profiles>
        <profile>
            <id>information</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <configuration>
                            <arguments>
                                <argument>information</argument>
                            </arguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>reconfigure</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <configuration>
                            <arguments>
                                <argument>reconfigure</argument>
                            </arguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>stop</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <configuration>
                            <arguments>
                                <argument>stop</argument>
                            </arguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
