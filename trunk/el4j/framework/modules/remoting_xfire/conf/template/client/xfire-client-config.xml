<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd">
<!--
    Spring bean configuration file to access burlap service.
-->
<beans>
    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->
    
    <import resource="classpath:template/common/protocols-config.xml"/>
    
    <bean id="xFireWithContextCalculator" class="ch.elca.el4j.services.remoting.RemotingProxyFactoryBean">
        <property name="remoteProtocol">
            <ref bean="xFireProtocol" />
        </property>
        <property name="serviceInterface">
            <value>ch.elca.el4j.demos.remoting.Calculator</value>
        </property>
        <property name="serviceName">
            <value>xFireCalculatorServiceWithContext</value>
        </property>
    </bean>
</beans>