<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration
	xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="false">

	<!-- Version: $Revision: 3057 $ -->
	<!-- URL: $URL: https://el4j.svn.sourceforge.net/svnroot/el4j/trunk/el4j/applications/demos/detailed_statistics/common/src/main/resources/log4j.xml $ -->
	<!-- Date: $Date: 2008-06-18 10:08:17 +0200 (Mi, 18 Jun 2008) $ -->
	<!-- Author: $Author: fabianr $ -->
	
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %5p [%c:%L] {%t} %m%n" />
		</layout>
	</appender>

	<logger name="ch.elca.el4j">
		<level value="INFO"/>
	</logger>

	<logger name="org.springframework">
		<level value="WARN"/>
	</logger>

	<logger name="attrib">
		<level value="ALL"/>
	</logger>

	<logger name="org.apache.log4j">
		<level value="WARN"/>
	</logger>
	
	<!--  <logger name="el4j.debugging">
		<level value="DEBUG"/>
	</logger> -->
	
	
	
	
	
	<root>
		<level value="WARN"/>
		<appender-ref ref="console"/>
		<!--appender-ref ref="logfile"/-->
	</root>
</log4j:configuration>
