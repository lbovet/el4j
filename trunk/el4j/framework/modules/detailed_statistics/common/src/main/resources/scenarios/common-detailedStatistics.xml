<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<!-- Version: $Revision: $ -->
	<!-- URL: $URL: $ -->
	<!-- Date: $Date:  $ -->
	<!-- Author: $Author:  $ -->
	
	<bean id="rmiProtocol"
		class="ch.elca.el4j.services.remoting.protocol.Rmi">
		<property name="serviceHost">
			<value>${rmiProtocol.serviceHost}</value>
		</property>
		<property name="servicePort">
			<value>${rmiProtocol.servicePort}</value>
		</property>
		<property name="implicitContextPassingRegistry">
			<ref local="implicitContextPassingRegistry" />
		</property>
	</bean>

	<!-- Implicit context passing registry -->
	<bean id="implicitContextPassingRegistry"
		class="ch.elca.el4j.core.contextpassing.DefaultImplicitContextPassingRegistry" />


	<bean id="sharedContextImplicitContextPasser"
		class="ch.elca.el4j.services.statistics.detailed.contextpassing.SharedContextImplicitContextPasser">
		<property name="implicitContextPassingRegistry">
			<ref bean="implicitContextPassingRegistry" />
		</property>
	</bean>

</beans>