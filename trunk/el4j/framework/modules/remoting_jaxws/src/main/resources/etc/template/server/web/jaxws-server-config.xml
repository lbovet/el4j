<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->
    
    <import resource="classpath:etc/template/common/protocols-config.xml" />

    <bean id="jaxwsWithContextCalculatorExporter"
        class="ch.elca.el4j.services.remoting.RemotingServiceExporter">
        <property name="remoteProtocol">
            <ref bean="jaxwsProtocol" />
        </property>
        <property name="serviceInterface">
            <value>ch.elca.el4j.tests.remoting.service.CalculatorJaxws</value>
        </property>
        <property name="serviceName">
            <value>Calculator.Jaxws.RemotingTemplateJaxws</value>
        </property>
        <property name="service">
            <idref bean="jaxwsCalculatorImpl"/>
        </property>
    </bean>

    <bean id="jaxwsCalculatorImpl"
        class="ch.elca.el4j.tests.remoting.service.impl.CalculatorImplJaxws" />
</beans>