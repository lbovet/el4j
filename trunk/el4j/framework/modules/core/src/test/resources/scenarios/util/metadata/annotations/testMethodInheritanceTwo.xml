<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    
    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->
    
    <!--
        Define the autoproxy bean which looks for each advisor in this context.
    -->
    <bean id="autoproxy" 
        class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator">
        <property name="proxyTargetClass">
            <value>true</value>
        </property>
    </bean>

    <!-- Define the Advisor bean. -->
    <bean id="genericMetaDataAdvisor" 
        class="ch.elca.el4j.util.metadata.GenericMetaDataAdvisor">
        <property name="methodInterceptor">
            <ref local="exampleInterceptor"/>
        </property>
        <property name="inheritanceConfiguration">
        	<ref local="inheritanceConfiguration" />
        </property>
    </bean>
    
    <bean id="inheritanceConfiguration" 
    	class="ch.elca.el4j.util.metadata.InheritanceConfiguration">

    	<property name="includeSuperclassInterfaces">
    			<value>true</value>
    	</property>
    	<property name="includeSuperclasses">
    			<value>true</value>
    	</property>
    </bean>	

    <!-- Define the interceptor to be used by the above defined advisor. -->
    <bean id="exampleInterceptor" 
        class="ch.elca.el4j.tests.util.metadata.annotations.helper.ExampleMethodInterceptor">
    </bean>
    
    

    <!--
        Define the bean which owns a method that should be intercepted.
    -->
    <bean id="foo" class="ch.elca.el4j.tests.util.metadata.annotations.helper.FooImpl"/>
</beans>