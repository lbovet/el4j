<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    
    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->
    
    <!--
        Define the autoproxy bean which looks for each advisor in this context.
    -->
    <bean id="autoproxy" 
        class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator">
        <property name="proxyTargetClass">
            <value>true</value>
        </property>
    </bean>

    <!-- Define the Advisor bean. -->
    <bean id="genericMetaDataAdvisor" 
        class="ch.elca.el4j.util.metadata.GenericMetaDataAdvisor">
        <constructor-arg>
            <ref local="exampleInterceptor"/>
        </constructor-arg>
        <property name="interceptingMetaData">
            <list>
                <value>ch.elca.el4j.tests.util.metadata.attributes.ExampleAttributeOne</value>
            </list>
        </property>
        <property name="defaultMetaDataType" value="COMMONS_ATTRIBUTES" />
    </bean>

    <!-- Define the interceptor to be used by the above defined advisor. -->
    <bean id="exampleInterceptor" 
        class="ch.elca.el4j.tests.util.metadata.attributes.ExampleInterceptor">
    </bean>

    <!--
        Define the bean which owns a method that should be intercepted.
    -->
    <bean id="foo" class="ch.elca.el4j.tests.util.metadata.attributes.FooImpl"/>
</beans>