    <parent>
        <groupId>ch.elca.el4j.modules</groupId>
        <artifactId>el4j-framework-modules</artifactId>
        <version>1.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>module-database</artifactId>
    <version>${version.module-database}</version>
    <packaging>jar</packaging>
    <name>EL4J module database</name>
    <description>Module database of the EL4J framework.</description>
    <dependencies>
        <!-- DBCP libraries -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-dbcp</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-pool</artifactId>
        </dependency>
        
        <!-- Universal IBM driver -->
        <dependency>
            <groupId>com.ibm</groupId>
            <artifactId>db2jcc</artifactId>
            <version>20040819</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.ibm</groupId>
            <artifactId>db2jcc_license_c</artifactId>
            <version>20040819</version>
            <scope>runtime</scope>
        </dependency>
        
        <!-- Oracle driver -->
        <dependency>
            <groupId>com.oracle</groupId>
            <artifactId>ojdbc14_g</artifactId>
            <version>10.2.0.1.0</version>
            <scope>runtime</scope>
        </dependency>
    </dependencies>
</project>
