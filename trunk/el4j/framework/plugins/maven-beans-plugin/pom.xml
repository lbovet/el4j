<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- $Revision$ -->
	<!-- $URL$ -->
	<!-- $Date$ -->
	<!-- $Author$ -->

	<parent>
		<groupId>ch.elca.el4j.maven.plugins</groupId>
		<artifactId>el4j-maven-plugins</artifactId>
		<version>1.6-SNAPSHOT</version>
	</parent>

	<artifactId>maven-beans-plugin</artifactId>
	<packaging>maven-plugin</packaging>
	<version>${version.maven-beans-plugin}</version>

	<name>EL4J maven beans plugin</name>
	<description>
		A plugin to extract all beans files from a
		ModuleApplicationContext configuration in a source file and copy
		them to the target directory for use by spring IDE.
	</description>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-plugin-plugin</artifactId>
				<configuration>
					<!--
						Note: This is to allow typing "mvn version:[goalname]"
						without having to type the fully qualified name on the
						command line.
					-->
					<goalPrefix>beans</goalPrefix>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.4.3</version>
				<configuration>
					<forkMode>never</forkMode>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-plugin-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-project</artifactId>
		</dependency>
		<dependency>
			<groupId>ch.elca.el4j.modules</groupId>
			<artifactId>module-core</artifactId>
		</dependency>
		<dependency>
			<groupId>ch.elca.el4j.maven</groupId>
			<artifactId>maven-utils</artifactId>
			<version>${version.maven-utils}</version>
		</dependency>
	</dependencies>
</project>
