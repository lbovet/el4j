<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
	
<sqlMap namespace="refdb-core">
    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->

    <!-- 
        Formal publication related invocations
    -->
    <!-- 
        ATTENTION: Dynamic parts are only used due to badly implemented jdbc 
        driver from ibm, which does not support java.sql.Types.NULL!
    -->
    <!--
        Tag 'update' and not 'insert' is used, because no primary key must be 
        generated.
    -->
    <update id="insertFormalPublication">
        insert into FORMALPUBLICATIONS (KEYTOREFERENCE, AUTHORNAME, PUBLISHER,
            PAGENUM) values (#key#, 
            <dynamic>
                <isNotNull property="authorName">
                    #authorName#
                </isNotNull>
                <isNull property="authorName">
                    null
                </isNull>
                ,
                <isNotNull property="publisher">
                    #publisher#
                </isNotNull>
                <isNull property="publisher">
                    null
                </isNull>
                ,
            </dynamic>
            #pageNum#)
    </update>
    <update id="updateFormalPublication">
        update FORMALPUBLICATIONS set 
            <dynamic>
                <isNotNull property="authorName">
                    AUTHORNAME=#authorName#
                </isNotNull>
                <isNull property="authorName">
                    AUTHORNAME=null
                </isNull>
                ,
                <isNotNull property="publisher">
                    PUBLISHER=#publisher#
                </isNotNull>
                <isNull property="publisher">
                    PUBLISHER=null
                </isNull>
                ,
            </dynamic>
            PAGENUM=#pageNum# 
            where KEYTOREFERENCE=#key#
    </update>
</sqlMap>
