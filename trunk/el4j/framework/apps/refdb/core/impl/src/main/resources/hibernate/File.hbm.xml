<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>

	<class name="ch.elca.el4j.apps.refdb.dto.FileDto" table="FILES">
		<cache usage="read-write"/>
		<id name="key">
            <column name="KEYID"/>
            <generator class="native">
            	<param name="sequence">file_sequence</param>
            </generator>
        </id>
        <version name="optimisticLockingVersion">
        	<column name="OPTIMISTICLOCKINGVERSION"/>
        </version>
        <property name="keyToReference" type="integer">
            <column name="KEYTOREFERENCE"/>
        </property>
      	<property name="name" type="string">
            <column name="NAME"/>
        </property>
        <property name="mimeType" type="string">
            <column name="MIMETYPE"/>
        </property>
        <property name="size" type="integer">
            <column name="CONTENTSIZE"/>
        </property>
        <property name="content" type="binary">
            <column name="CONTENT"/>
        </property>
        <!-- <many-to-one name="reference"
        			 column="KEYTOREFERENCE"
        			 class="ch.elca.el4j.apps.refdb.dto.ReferenceDto"
        			 not-null="true"/>  -->
	</class>

</hibernate-mapping>