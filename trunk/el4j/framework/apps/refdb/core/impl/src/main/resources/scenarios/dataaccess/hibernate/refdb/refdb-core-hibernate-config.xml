<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
    "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <!-- $Version$ -->
    <!-- $URL$ -->
    <!-- $Date$ -->
    <!-- $Author$ -->
    
    <bean id="keywordDao" parent="abstractDao" class="ch.elca.el4j.apps.keyword.dao.impl.hibernate.HibernateKeywordDao"/>
    <bean id="linkDao" parent="abstractDao" class="ch.elca.el4j.apps.refdb.dao.impl.hibernate.HibernateLinkDao"/>
    <bean id="formalPublicationDao" parent="abstractDao" class="ch.elca.el4j.apps.refdb.dao.impl.hibernate.HibernateFormalPublicationDao"/>
    <bean id="bookDao" parent="abstractDao" class="ch.elca.el4j.apps.refdb.dao.impl.hibernate.HibernateBookDao"/>
    <bean id="annotationDao" parent="abstractDao" class="ch.elca.el4j.apps.refdb.dao.impl.hibernate.HibernateAnnotationDao"/>
    <bean id="fileDao" parent="abstractDao" class="ch.elca.el4j.apps.refdb.dao.impl.hibernate.HibernateFileDao"/>
    <bean id="fileDescriptorViewDao" parent="abstractDao" class="ch.elca.el4j.apps.refdb.dao.impl.hibernate.HibernateFileDescriptorViewDao"/>
    
    <!-- Hibernate Session Factory Bean -->
    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="mappingResources">
            <list>
                <value>hibernate/Keyword.hbm.xml</value>
                <value>hibernate/Reference.hbm.xml</value>
                <value>hibernate/Annotation.hbm.xml</value>
                <value>hibernate/File.hbm.xml</value>
                <value>hibernate/FileDescriptorView.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${databaseDialect}</prop>
                <prop key="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</prop>
                <prop key="hibernate.max_fetch_depth">3</prop>
            </props>
        </property>
        <property name="useTransactionAwareDataSource">
        	<value>true</value>
        </property>
        <property name="dataSource">
            <ref bean="dataSource"/>
        </property>
    </bean>

</beans>