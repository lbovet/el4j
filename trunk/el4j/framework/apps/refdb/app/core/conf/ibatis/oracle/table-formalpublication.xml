<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com/DTD SQL Map 2.0//EN"
	"http://www.ibatis.com/dtd/sql-map-2.dtd">
	
<sqlMap namespace="refdb-core">
    <!-- Version: $Revision$ -->
    <!-- Source: $Source$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->

    <!-- 
        Formal publication related invocations
    -->
    <!--
        Tag 'update' and not 'insert' is used, because no primary key must be 
        generated.
    -->
    <update id="insertFormalPublication">
        insert into FORMALPUBLICATIONS (KEYTOREFERENCE, AUTHORNAME, PUBLISHER,
            PAGENUM) values (#key#, #authorName#, #publisher#, #pageNum#)
    </update>
    <update id="updateFormalPublication">
        update FORMALPUBLICATIONS set AUTHORNAME=#authorName#, 
            PUBLISHER=#publisher#, PAGENUM=#pageNum# 
            where KEYTOREFERENCE=#key#
    </update>
</sqlMap>
