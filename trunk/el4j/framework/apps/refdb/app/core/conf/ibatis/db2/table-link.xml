<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
	
<sqlMap namespace="refdb-core">
    <!-- Version: $Revision$ -->
    <!-- Source: $Source$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->

    <!-- 
        Link related invocations
    -->
    <!-- 
        ATTENTION: Dynamic parts are only used due to badly implemented jdbc 
        driver from ibm, which does not support java.sql.Types.NULL!
    -->
    <!--
        Tag 'update' and not 'insert' is used, because no primary key must be 
        generated.
    -->
    <update id="insertLink">
        insert into LINKS (KEYTOREFERENCE, URL) values (#key#, 
            <dynamic>
                <isNotNull property="url">
                    #url#
                </isNotNull>
                <isNull property="url">
                    null
                </isNull>
            </dynamic>
        )
    </update>
    <update id="updateLink">
        update LINKS set 
            <dynamic>
                <isNotNull property="url">
                    URL=#url#
                </isNotNull>
                <isNull property="url">
                    URL=null
                </isNull>
            </dynamic>
        where KEYTOREFERENCE=#key#
    </update>
</sqlMap>
