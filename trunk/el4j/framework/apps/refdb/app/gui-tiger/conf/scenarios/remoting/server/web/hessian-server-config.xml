<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
    "http://www.springframework.org/dtd/spring-beans.dtd">
<!--
    Spring bean configuration file to export service with hessian.
-->
<beans>
    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->
    
    <import resource="classpath:scenarios/remoting/common/*.xml"/>
    
    <bean id="keywordRepoExporter" 
        class="ch.elca.el4j.services.remoting.RemotingServiceExporter">
        <property name="remoteProtocol">
            <ref bean="hessianProtocol" />
        </property>
        <property name="serviceInterface">
            <value>ch.elca.el4j.services.persistence.generic.dao.ConvenientGenericRepository</value>
        </property>
        <property name="service">
            <idref bean="keywordRepo"/>
        </property>    
    </bean>
    
    <bean id="referenceRepoExporter" 
        class="ch.elca.el4j.services.remoting.RemotingServiceExporter">
        <property name="remoteProtocol">
            <ref bean="hessianProtocol" />
        </property>
        <property name="serviceInterface">
            <value>ch.elca.el4j.services.persistence.generic.dao.ConvenientGenericRepository</value>
        </property>
        <property name="service">
            <idref bean="referenceRepo"/>
        </property>    
    </bean>    
</beans>
