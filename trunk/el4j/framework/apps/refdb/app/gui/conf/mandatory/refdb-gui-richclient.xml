        <property name="viewProperties">
            <map>
                <entry key="clinic">
                    <ref bean="clinic" />
                </entry>
            </map>
        </property>
    </bean>

    <bean id="setupWizard"
        class="org.springframework.richclient.application.setup.SetupWizard">
        <property name="licenseTextLocation">
