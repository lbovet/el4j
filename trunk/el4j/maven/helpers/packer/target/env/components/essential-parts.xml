<component>
    <fileSets>
        <fileSet>
            <directory>D:/Projects/EL4J/external</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>D:/Projects/EL4J/external/etc</directory>
            <outputDirectory>etc</outputDirectory>
            <includes>
                <include>*.txt</include>
                <include>*.conf</include>
                <include>m2/*</include>
                <include>subversion/*</include>
            </includes>
            <excludes>
                <exclude>**/.*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>D:/Projects/EL4J/external/external-tools/maven</directory>
            <outputDirectory>external-tools/maven</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>D:/m2repository</directory>
            <outputDirectory>m2repository</outputDirectory>
            <excludes>
                <!-- Exclude JDBC drivers of DB2 and Oracle. -->
                <exclude>**/db2jcc*/**</exclude>
                <exclude>**/ojdbc*/**</exclude>
                
                <!-- Ignore all in internal EL4J stuff. -->
                <exclude>ch/elca/el4j/internal/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</component>
