<?xml version="1.0" encoding="UTF-8"?>
<project>
	<parent>
		<artifactId>el4j-maven</artifactId>
		<groupId>ch.elca.el4j.maven</groupId>
		<version>1.6-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.elca.el4j</groupId>
	<artifactId>el4jCore</artifactId>
	<name>A custom project that uses EL4J.
		Contains a simple calculator
		inclusive a JUnit test for it.</name>
	<version>1.0-SNAPSHOT</version>
	<url>http://el4j.sourceforge.net</url>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<configuration>
					<mainClass>ch.elca.el4j.Calculator</mainClass>
					<keepAlive>false</keepAlive>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<releases />
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>el4jReleaseRepositoryExternal</id>
			<name>External release repository of the EL4J project</name>
			<url>http://el4.elca-services.ch/el4j/maven2repository</url>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>ch.elca.el4j.modules</groupId>
			<artifactId>module-core</artifactId>
		</dependency>
		<dependency>
			<groupId>ch.elca.el4j.modules</groupId>
			<artifactId>module-jmx</artifactId>
		</dependency>
	</dependencies>
</project>