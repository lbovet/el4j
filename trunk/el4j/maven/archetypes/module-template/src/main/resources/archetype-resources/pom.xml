<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
          <groupId>ch.elca.el4j</groupId>
          <artifactId>el4j</artifactId>
          <version>1.2.1-SNAPSHOT</version>
	</parent>
	
	<groupId>${groupId}</groupId>
	<artifactId>${artifactId}</artifactId>
	<packaging>jar</packaging>
	<version>${version}</version>
	<name>A custom project that uses EL4J</name>
	<url>http://el4j.sourceforge.net</url>

	<dependencies>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>ch.elca.el4j.modules</groupId>
			<artifactId>module-core</artifactId>
			<version>1.7</version>
		</dependency>

	</dependencies>

	<build>
		<!-- Use Java 1.5 (default is 1.3) -->
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.5</source>
						<target>1.5</target>
						<neverSkipCompiling>true</neverSkipCompiling>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>

		<!--  Maven plugin to execute project -->
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.1-beta-1</version>
				<configuration>
					<mainClass>${groupId}.Calculator</mainClass>
					<keepAlive>false</keepAlive>
				</configuration>
			</plugin>
		</plugins>

	</build>
	
	<!--  Repository for EL4J modules -->
	<repositories>

		<repository>
			<id>El4jElcaServices</id>
			<name>External EL4J snapshot repository</name>
			<url>http://el4.elca-services.ch/el4j/maven2repository</url>
		</repository>

	</repositories>

	<!--  Repository for Snapshot of Maven exec plugin we use -->
	<pluginRepositories>
		<pluginRepository>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
			<id>el4jSnapshotPluginRepositoryExternal</id>
			<name>
				External snapshot repository of the EL4J project
			</name>
			<url>http://el4.elca-services.ch/el4j/maven2snapshots</url>
		</pluginRepository>
	</pluginRepositories>

</project>
