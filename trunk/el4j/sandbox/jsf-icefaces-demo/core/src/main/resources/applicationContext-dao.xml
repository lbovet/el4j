    <!-- adds AppFuses classes to sessionFactory -->
    <bean class="ch.elca.el4j.internal.apps.dao.spring.HibernateExtensionPostProcessor">
      <property name="annotatedClasses">
         <list>
             <value>ch.elca.el4j.internal.apps.model.User</value>
             <value>ch.elca.el4j.internal.apps.model.Role</value>
             <value>ch.elca.el4j.internal.apps.tutorial.model.Person</value>
          </list>
