<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config xmlns="http://java.sun.com/JSF/Configuration">

    <application>
        <variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>es</supported-locale>
            <supported-locale>fr</supported-locale>
            <supported-locale>it</supported-locale>
            <supported-locale>ko</supported-locale>
            <supported-locale>nl</supported-locale>
            <supported-locale>no</supported-locale>
            <supported-locale>pt</supported-locale>
            <supported-locale>pt_BR</supported-locale>
            <supported-locale>tr</supported-locale>
            <supported-locale>zh</supported-locale>
            <supported-locale>zh_CN</supported-locale>
            <supported-locale>zh_TW</supported-locale>
        </locale-config>
        <message-bundle>ApplicationResources</message-bundle>
    </application>
    
   	
	 <application>
		<view-handler>
		com.icesoft.faces.facelets.D2DFaceletViewHandler
		</view-handler>
	</application>
	


    <component>
        <component-type>com.corejsf.validator.UIValidatorScript</component-type>
        <component-class>com.corejsf.validator.UIValidatorScript</component-class>
    </component>
    
    
   

	<navigation-rule>
    <navigation-case>
        <from-outcome>mainMenu</from-outcome>
        <to-view-id>/mainMenu.iface</to-view-id>
        <redirect/>
    </navigation-case>
	</navigation-rule>

    <navigation-rule>
	    <navigation-case>
	    <from-outcome>cancel</from-outcome>
	    <to-view-id>/persons.iface</to-view-id>
	    </navigation-case>
	</navigation-rule>
	
	
	
	<navigation-rule>
	    <navigation-case>
	    <from-outcome>cancelKeyword</from-outcome>
	    <to-view-id>/keywords.iface</to-view-id>
	    </navigation-case>
	</navigation-rule>
	
	
    
  
	
	<managed-bean>
		<managed-bean-name>renderManager</managed-bean-name>
		<managed-bean-class>
		com.icesoft.faces.async.render.RenderManager
		</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
		</managed-bean>
		<managed-bean>
		<managed-bean-name>timeZoneBean</managed-bean-name>
		<managed-bean-class>ch.elca.el4j.internal.apps.tutorial.webapp.action.TimeZoneBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
		<property-name>renderManager</property-name>
		<value>#{renderManager}</value>
		</managed-property>
	</managed-bean>


	
    <managed-bean>
        <managed-bean-name>basePage</managed-bean-name>
        <managed-bean-class>ch.elca.el4j.internal.apps.webapp.action.BasePage</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
	

	
    <managed-bean>
        <managed-bean-name>fileUpload</managed-bean-name>
        <managed-bean-class>ch.elca.el4j.internal.apps.webapp.action.FileUpload</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
	
    <managed-bean>
        <managed-bean-name>reload</managed-bean-name>
        <managed-bean-class>ch.elca.el4j.internal.apps.webapp.action.Reload</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
   
	
    <!-- Add additional beans here -->
   
	
	<managed-bean>
    	<managed-bean-name>personList</managed-bean-name>
    	<managed-bean-class>ch.elca.el4j.internal.apps.tutorial.webapp.action.PersonList</managed-bean-class>
    	<managed-bean-scope>request</managed-bean-scope>
    	<managed-property>
	        <property-name>currentId</property-name>
	        <value>#{param.currentId}</value>
	    </managed-property>
    	<managed-property>
        	<property-name>personManager</property-name>
        	<value>#{personManager}</value>
    	</managed-property>
	</managed-bean>
	
	<managed-bean>
    	<managed-bean-name>keywords</managed-bean-name>
    	<managed-bean-class>ch.elca.el4j.internal.apps.webapp.action.Keywords</managed-bean-class>
    	<managed-bean-scope>request</managed-bean-scope>
    	<!-- 
    	<managed-property>
	        <property-name>currentId</property-name>
	        <value>#{param.currentId}</value>
	    </managed-property>-->
    	<managed-property>
        	<property-name>daoRegistry</property-name>
        	<value>#{daoRegistry}</value>
    	</managed-property>
    	
	</managed-bean>
	

