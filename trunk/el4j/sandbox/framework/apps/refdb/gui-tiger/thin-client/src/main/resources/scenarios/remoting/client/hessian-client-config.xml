<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- $Revision$ -->
    <!-- $URL$ -->
    <!-- $Date$ -->
    <!-- $Author$ -->

    <import resource="classpath:scenarios/remoting/common/*.xml"/>
    
    <bean id="keywordRepo" class="ch.elca.el4j.services.remoting.RemotingProxyFactoryBean">
        <property name="remoteProtocol">
            <ref bean="hessianProtocol" />
        </property>
        <property name="serviceInterface">
            <value>ch.elca.el4j.services.persistence.generic.repo.ConvenientGenericRepository</value>
        </property>
        <property name="serviceName" value="keywordRepo.remoteservice"/>
    </bean>
    
    <bean id="referenceRepo" class="ch.elca.el4j.services.remoting.RemotingProxyFactoryBean">
        <property name="remoteProtocol">
            <ref bean="hessianProtocol" />
        </property>
        <property name="serviceInterface">
            <value>ch.elca.el4j.services.persistence.generic.repo.ConvenientGenericRepository</value>
        </property>
        <property name="serviceName" value="referenceRepo.remoteservice"/>
    </bean>
    
    
   	<bean id="repoRegistry"	class="ch.elca.el4j.services.persistence.generic.repo.impl.SettableRepositoryRegistry">
    	<property name="repos">
    		<list>
    			<ref bean="keywordRepo"/>
    			<ref bean="referenceRepo"/>
       		</list>
    	</property>
    </bean>
    
    <bean id="identityFixer"
    	class="ch.elca.el4j.services.persistence.hibernate.HibernateProxyAwareIdentityFixer"/>    	
</beans>
