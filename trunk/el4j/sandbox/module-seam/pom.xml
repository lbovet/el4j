<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.elca.el4j.modules</groupId>
	<artifactId>module-seam</artifactId>
	<name>JBoss Seam Module</name>
	<packaging>jar</packaging>
	<version>1.0-SNAPSHOT</version>
	<description>JBoss Seam Module including JSF/Facelets and RichFaces</description>
	
	<parent>
		<groupId>ch.elca.el4j.modules</groupId>
		<artifactId>el4j-framework-modules</artifactId>
		<version>1.2.1-SNAPSHOT</version>
	</parent>

	<!-- NOTE: You can't find usable Seam / RichFaces stuff in maven repositories
	           by the end of september 2007. So we had to manually install the
			  .jar files delivered with Seam into our elca-services repository.
			  TODO we now use the official repository -> delete jars on elca-services? -->
	<dependencies>
		<!-- JBoss Seam -->
		<dependency>
			<groupId>org.jboss.seam</groupId>
			<artifactId>jboss-seam</artifactId>
			<version>2.0.1.GA</version>
		</dependency>
		<dependency>
			<groupId>org.jboss.seam</groupId>
			<artifactId>jboss-seam-ui</artifactId>
			<version>2.0.1.GA</version>
		</dependency>
		<dependency>
			<groupId>org.jboss.seam</groupId>
			<artifactId>jboss-seam-ioc</artifactId>
			<version>2.0.1.GA</version>
		</dependency>
        <dependency>
            <groupId>org.jboss.seam</groupId>
            <artifactId>jboss-seam-remoting</artifactId>
            <version>2.0.1.GA</version>
        </dependency>
		<dependency>
			<groupId>org.jboss.seam</groupId>
			<artifactId>jboss-seam-debug</artifactId>
			<version>2.0.1.GA</version>
		</dependency>
		
		<!-- JBoss RichFaces -->
		<dependency>
			<groupId>org.richfaces.framework</groupId>
			<artifactId>richfaces-api</artifactId>
			<version>3.1.3.GA</version>
		</dependency>
		<dependency>
			<groupId>org.richfaces.framework</groupId>
			<artifactId>richfaces-impl</artifactId>
			<version>3.1.3.GA</version>
		</dependency>
		<dependency>
			<groupId>org.richfaces.ui</groupId>
			<artifactId>richfaces-ui</artifactId>
			<version>3.1.3.GA</version>
		</dependency>
		
		<!-- Java Server Faces and Facelets -->
		<dependency>
			<groupId>javax.faces</groupId>
			<artifactId>jsf-api</artifactId>
			<version>1.2_07</version>
		</dependency>
		<dependency>
			<groupId>javax.faces</groupId>
			<artifactId>jsf-impl</artifactId>
			<version>1.2_07</version>
		</dependency>
		<dependency>
			<groupId>com.sun.facelets</groupId>
			<artifactId>jsf-facelets</artifactId>
			<version>1.1.14</version>
		</dependency>
	</dependencies>
	<repositories>
		<repository>
			<id>jboss-repo</id>
			<url>http://repository.jboss.org/maven2</url>
		</repository>
		<repository>
			<id>jsf-repo</id>
			<url>https://maven-repository.dev.java.net/nonav/repository/</url>
			<layout>legacy</layout>
		</repository>
	</repositories>
</project>
