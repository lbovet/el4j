<?xml version="1.0" encoding="UTF-8"?>
<env xmlns="http://www.el4-services.elca.ch/schema/env/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.el4-services.elca.ch/schema/env/ http://el4.elca-services.ch/el4j/schema/env-1.0.xsd">
	
	<placeholders>
		<placeholder name="db.name" value="db2"/>
		<placeholder name="rmi.host" value="localhost"/>
		<placeholder name="rmi.port" value="8099"/>
	</placeholders>
	<bean-overrides>
		<bean-override name="dataSource.jdbcUrl" value="jdbc:derby://localhost:1527/local;create=true"/>
		<bean-override name="dataSource.user" value="local"/>
		<bean-override name="dataSource.password" value="pass"/>
	</bean-overrides>
</env>
