<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- $Revision$ -->
    <!-- $URL$ -->
    <!-- $Date$ -->
    <!-- $Author$ -->
    
    <bean id="person" scope="prototype"
        class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target">
            <bean id="personTarget"
                class="ch.elca.el4j.demos.model.DefaultPerson" scope="prototype" />
        </property>
        <property name="exposeProxy">
            <value>true</value>
        </property>
        <property name="interceptorNames">
            <list>
                <value>propertyChangeListenerAdvisor</value>
            </list>
        </property>
        <property name="proxyTargetClass">
            <value>true</value>
        </property>
    </bean>
	
	<bean id="number" scope="prototype"
        class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target">
            <bean id="numberTarget"
                class="ch.elca.el4j.demos.model.MyNumber" scope="prototype" />
        </property>
        <property name="exposeProxy">
            <value>true</value>
        </property>
        <property name="interceptorNames">
            <list>
                <value>propertyChangeListenerAdvisor</value>
            </list>
        </property>
        <property name="proxyTargetClass">
            <value>true</value>
        </property>
    </bean>


    <bean id="propertyChangeListenerMixin"
        class="ch.elca.el4j.model.mixin.PropertyChangeListenerMixin"
        scope="prototype">
    </bean>

    <bean id="propertyChangeListenerAdvisor"
        class="org.springframework.aop.support.DefaultIntroductionAdvisor"
        scope="prototype">
        <constructor-arg>
            <ref bean="propertyChangeListenerMixin" />
        </constructor-arg>
    </bean>
</beans>