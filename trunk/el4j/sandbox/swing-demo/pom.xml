<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <!-- Version: $Revision: 1950 $ -->
    <!-- URL: $URL: https://el4j.svn.sourceforge.net/svnroot/el4j/trunk/el4j/framework/modules/spring_rcp/pom.xml $ -->
    <!-- Date: $Date: 2007-08-17 10:27:21 +0200 (Fr, 17 Aug 2007) $ -->
    <!-- Author: $Author: swismer $ -->


    <parent>
        <groupId>ch.elca.el4j.modules</groupId>
        <artifactId>el4j-framework-modules</artifactId>
        <version>1.1.4-SNAPSHOT</version>
    </parent>

    <artifactId>swing-demo</artifactId>
    <version>0.2-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>EL4J swing demo</name>
    <description>
        Demo for module swing of the EL4J framework.
    </description>
    <dependencies>
        <!-- EL4J framework modules -->
        <dependency>
            <groupId>ch.elca.el4j.modules</groupId>
            <artifactId>module-core</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.elca.el4j.modules</groupId>
            <artifactId>module-security</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.elca.el4j.modules</groupId>
            <artifactId>module-swing</artifactId>
            <version>0.2-SNAPSHOT</version>
        </dependency>

    </dependencies>

     <repositories>
             <repository>
             <snapshots>
                     <enabled>true</enabled>
             </snapshots>
             <releases>
                     <enabled>false</enabled>
             </releases>
             <id>el4jSnapshotRepositoryInternal</id>
             <name>
                     Internal snapshot repository of the EL4J project
             </name>
             <url>http://leaffy.elca.ch/java/maven2snapshots</url>
             </repository>
     <repository>
         <snapshots>
             <enabled>false</enabled>
         </snapshots>
         <releases>
             <enabled>true</enabled>
         </releases>
         <id>el4jReleaseRepositoryExternal</id>
         <name>External release repository of the EL4J project</name>
         <url>http://el4.elca-services.ch/el4j/maven2repository</url>
     </repository>
     <repository>
         <snapshots>
             <enabled>true</enabled>
         </snapshots>
         <releases>
             <enabled>false</enabled>
         </releases>
         <id>el4jSnapshotRepositoryExternal</id>
         <!--id>apache.snapshots</id-->
         <name>External snapshot repository of the EL4J project</name>
         <url>http://el4.elca-services.ch/el4j/maven2snapshots</url>
     </repository>
     </repositories>

    <build>
     <plugins>
        <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <configuration>
                <mainClass>ch.elca.el4j.demos.gui.MainForm</mainClass>
                <keepAlive>false</keepAlive>
            </configuration>
        </plugin>
     </plugins>
    </build>
</project>
