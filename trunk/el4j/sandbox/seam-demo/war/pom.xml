<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->

	<parent>
        <groupId>ch.elca.el4j.applications</groupId>
        <artifactId>seam-demo</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>seam-demo-war</artifactId>
    <packaging>war</packaging>
    <name>seam-demo-war</name>
    <description>WAR part of Seam Demo</description>
    
	<build>
        <plugins>
            <plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<configuration>
					<deployer>
						<deployables>
							<deployable>
								<location>${jee-web.war.location}</location>
								<properties>
									<context>${jee-web.context}</context>
								</properties>
							</deployable>
						</deployables>
					</deployer>
				</configuration>
			</plugin>
			
			
            <!-- EL4J Database plugin to start and fill DB automatically -->
            <plugin>
                <groupId>ch.elca.el4j.maven.plugins</groupId>
                <artifactId>maven-database-plugin</artifactId>
                <executions>
                    <execution>
                        <id>prepare</id>
                        <goals>
                            <goal>prepare</goal>
                        </goals>
                        <phase>test-compile</phase>
                    </execution>
                    <!-- Delete tables and stop Network Server -->
                    <execution>
                        <id>cleanUp</id>
                        <goals>
                            <goal>cleanUp</goal>
                        </goals>
                        <phase>package</phase>
                    </execution>
                </executions>
            </plugin>
			
			<!-- maven jetty plugin for comfortable development -->
			<plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <version>6.1.5</version>
                <configuration>
					<!--<classesDirectory>../jar/target/classes</classesDirectory>--><!-- classes are taken from seam-demo-jar -->
					<!--but this causes duplicate classes because the dependency to seam-demo-jar still exists-->
                    <scanIntervalSeconds>3</scanIntervalSeconds>
                    <scanTargetPatterns>
                        <scanTargetPattern>
                            <directory>src/main/webapp</directory>
                            <includes>
                                <include>**/*.*</include>
                            </includes>
							<excludes>
                                <exclude>**/*.svn*</exclude>
                            </excludes>
                        </scanTargetPattern>
						<!-- this lets restart jetty when code is changed, but does not force a recompile so changes are not reflected -->
						<!--<scanTargetPattern>
                            <directory>../jar/target/classes</directory>
                            <includes>
                                <include>**/*.*</include>
                            </includes>
							<excludes>
                                <exclude>**/*.svn*</exclude>
                            </excludes>
                        </scanTargetPattern>-->
                    </scanTargetPatterns>
					<!-- webdefault.xml is needed to disable file locking for static files-->
					<webDefaultXml>src/main/resources/webdefault.xml</webDefaultXml>
					<contextPath>${jee-web.context}</contextPath>
                </configuration>
            </plugin>
        </plugins>
		<testResources>
			<testResource>
				<directory>src/main/webapp</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
			</testResource>
		</testResources>
    </build>

	<!-- Project dependencies -->
    <dependencies>
		<dependency>
		    <groupId>org.testng</groupId>
		    <artifactId>testng</artifactId>
		    <version>5.1</version>
			<scope>test</scope>
		</dependency>
		
	
        <dependency>
            <groupId>ch.elca.el4j.applications</groupId>
            <artifactId>seam-demo-jar</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
	
</project>
