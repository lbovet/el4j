	<!-- Project dependencies -->
	<dependencies>
		<dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.5</version>
        </dependency>
	
		<!--  EL4J framework modules -->
		<dependency>
			<groupId>ch.elca.el4j.modules</groupId>
			<artifactId>module-seam</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
            <groupId>ch.elca.el4j.modules</groupId>
            <artifactId>module-env</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.elca.el4j.modules</groupId>
            <artifactId>module-web-jar</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.elca.el4j.modules</groupId>
            <artifactId>module-database</artifactId>
            <exclusions>
                <exclusion>            
            			<groupId>com.oracle</groupId>
						<artifactId>ojdbc14_g</artifactId>
			 	</exclusion>
			 	<exclusion>
						<groupId>com.mysql</groupId>
						<artifactId>mysql-connector</artifactId>
				</exclusion>
            </exclusions>
        </dependency>

		<!-- EL4J keyword dao -->
		<dependency>
            <groupId>ch.elca.el4j.applications</groupId>
            <artifactId>keyword-dao</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>ch.elca.el4j.modules</groupId>
                    <artifactId>module-ibatis</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
	</dependencies>
    <profiles>
        <!-- DB -->
        <profile>
            <id>db2</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <db.username>keyword_user</db.username>
                <db.password>keyword_user</db.password>
            </properties>
        </profile>
        <profile>
            <id>oracle</id>
            <properties>
                <db.username>LEAF4</db.username>
                <db.password>LEAF</db.password>
            </properties>
        </profile>
        <profile>
            <id>mysql</id>
            <properties>
                <db.username>root</db.username>
                <db.password>admin</db.password>
            </properties>
        </profile>
    </profiles>
