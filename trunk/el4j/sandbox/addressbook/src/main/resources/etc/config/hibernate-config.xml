<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd">


<beans>
	
	<!-- Get connection properties -->
	<import resource="classpath*:etc/properties/contacts-property-override-configurer.xml"/>
	<!--  Data Source in Module Hibernate -->
	<import resource="classpath*:scenarios/dataaccess/hibernate/hibernateDatabase.xml"/>
	<!--  DB2 properties in Module Database -->
	<import resource="classpath*:scenarios/db/raw/common-database-property-override-configurer.xml"/>
	
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<!-- List of Hibernate mapping files -->
		<property name="mappingResources">
			<list>
				<value>etc/hibernate/Contact.hbm.xml</value>
			</list>
		</property>
		<!-- List of Hibernate properties -->
		<property name="hibernateProperties">
			<props>
				
				<!-- Database-specific Hibernate dialect. -->
				<prop key="hibernate.dialect">
					ch.elca.el4j.services.persistence.hibernate.dialect.PatchedDerbyDialect
				</prop>

				<!-- Cache provider -->
				<prop key="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</prop>

				<!-- Hibernate's outer join fetch behavior -->
				<prop key="hibernate.max_fetch_depth">3</prop>
			</props>
		</property>
        <property name="useTransactionAwareDataSource">
        	<value>true</value>
        </property>
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
	</bean>
	
	<bean id="contactDao" parent="abstractDao" class="ch.elca.el4j.addressbook.dao.HibernateContactDao"/>
	
	<bean id="contactService"  
	 	class="ch.elca.el4j.addressbook.dao.DefaultContactService">
		<property name="daoRegistry">
	 		<ref bean="daoRegistry"/>
	 	</property> 	
	</bean>
	
	<bean id="daoRegistry"
		class="ch.elca.el4j.services.persistence.generic.dao.impl.DefaultDaoRegistry">
		<property name="daos">
			<map>
				<entry key="ch.elca.el4j.addressbook.dom.Contact">
					<ref bean="contactDao"/>
				</entry>
			</map>
		</property>
	</bean>
</beans>