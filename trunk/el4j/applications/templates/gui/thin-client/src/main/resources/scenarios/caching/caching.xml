<?xml version="1.0" encoding="UTF-8"?>
<!--
	Spring bean configuration file to access httpInvoker service.
-->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- $Revision: 4091 $ -->
	<!-- $URL: https://el4j.svn.sourceforge.net/svnroot/el4j/trunk/el4j/applications/templates/gui/thin-client/src/main/resources/scenarios/remoting/client/httpInvoker-client-config.xml $ -->
	<!-- $Date: 2010-01-15 12:21:07 +0100 (Fr, 15 Jan 2010) $ -->
	<!-- $Author: jonasha $ -->
	
	<bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
		<property name="configLocation" value="ehcache.xml" />
	</bean>
	
	<bean id="cache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager" ref="cacheManager" />
		<property name="cacheName" value="demoCache" />
	</bean>
	
</beans>