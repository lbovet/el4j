<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- $Revision$ -->
	<!-- $URL$ -->
	<!-- $Date$ -->
	<!-- $Author$ -->
	
	<context:annotation-config/>
	
	<bean id="ExceptionsForm" class="ch.elca.el4j.demos.gui.ExceptionsForm" lazy-init="true"/>
	
	<bean id="ResourceInjectionDemoForm" class="ch.elca.el4j.demos.gui.ResourceInjectionDemoForm" lazy-init="true" scope="prototype"/>
	<bean id="CancelableDemoForm" class="ch.elca.el4j.demos.gui.CancelableDemoForm" lazy-init="true"/>
	<bean id="MasterDetailDemoForm" class="ch.elca.el4j.demos.gui.MasterDetailDemoForm" lazy-init="true"/>
	<bean id="BindingDemoForm" class="ch.elca.el4j.demos.gui.BindingDemoForm" lazy-init="true"/>
	<bean id="EventBusDemoForm" class="ch.elca.el4j.demos.gui.EventBusDemoForm" lazy-init="true"/>
	<bean id="SearchDialog" class="ch.elca.el4j.demos.gui.SearchDialog" lazy-init="true"/>

	<bean id="RefDBDemoForm" class="ch.elca.el4j.demos.gui.RefDBDemoForm" lazy-init="true"/>
	<bean id="ReferenceEditorForm" class="ch.elca.el4j.demos.gui.ReferenceEditorForm" lazy-init="true"/>
	
	<bean id="XMLDemoForm" class="ch.elca.el4j.demos.gui.XMLDemoForm" lazy-init="true" scope="prototype"/>
	
	<bean id="AboutDialog" class="ch.elca.el4j.gui.swing.dialog.about.AboutDialog" lazy-init="true"/>
	
	<!-- example how to override default configurations. See ch.elca.el4j.demos.gui.MainFormMDIXML.initialize() -->
	<bean id="overrideConfig" class="ch.elca.el4j.util.config.GenericConfig" lazy-init="true" scope="prototype">
		<!-- parent will be set in code -->
		<property name="overrideMap">
			<map>
				<entry key="invalidColor">
					<bean class="java.awt.Color">
						<constructor-arg type="int" value="255"/>
						<constructor-arg type="int" value="64"/>
						<constructor-arg type="int" value="64"/>
					</bean>
				</entry>
			</map>
		</property>
	</bean>
</beans>
