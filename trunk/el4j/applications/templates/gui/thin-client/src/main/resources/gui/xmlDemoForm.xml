<?xml version="1.0" encoding="UTF-8"?>
<panel xmlns="http://cookxml.sf.net/cookswing/"
	xmlns:cx="http://cookxml.sf.net/"
	xmlns:cc="http://cookxml.sf.net/common/"
	xmlns:el4j="http://www.elca.ch/el4j/cookSwing"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://cookxml.sf.net/cookswing/ http://el4.elca-services.ch/el4j/schema/swing/cookSwing.xsd
		http://www.elca.ch/el4j/cookSwing http://el4.elca-services.ch/el4j/schema/swing/el4jSwing.xsd
		http://cookxml.sf.net/common/ http://el4.elca-services.ch/el4j/schema/swing/cookXmlCommon.xsd
		http://cookxml.sf.net/ http://el4.elca-services.ch/el4j/schema/swing/cookXml.xsd"
	cx:varref="this">

	<borderlayout>
		<constraint location="North">
			<panel>
				<el4j:designgridlayout>
					<el4j:emptyrow height="30" />
					<el4j:row align="left">
						<label text="A label in left aligned row. Above there is an empty row (height: 30 pixels)" />
					</el4j:row>
					<el4j:row>
						<label name="lblFirstName" horizontalalignment="RIGHT" />
						<textfield cx:var="m_firstName" colspan="2">
							<el4j:binding src="m_person" property="firstName" updateStrategy="read write" validation="true" />
						</textfield>
						
						<label name="lblLastName" horizontalalignment="RIGHT" />
						<textfield cx:var="m_lastName" colspan="2">
							<el4j:binding src="m_person" property="lastName" updateStrategy="read write" validation="true" />
						</textfield>
					</el4j:row>
					<el4j:row>
						<cc:null colspan="3"/>
						
						<label name="lblAge" horizontalalignment="RIGHT" />
						<cc:object cx:ctor="ch.elca.el4j.gui.swing.widgets.IntegerField" colspan="2">
							<el4j:binding src="m_person" property="age" updateStrategy="read write" validation="true" />
						</cc:object>
					</el4j:row>
					<el4j:row align="center">
						<button action="info" />
					</el4j:row>
					<el4j:row >
						<label cx:var="m_statusLabel" />
					</el4j:row>
				</el4j:designgridlayout>
			</panel>
		</constraint>
		<constraint location="Center">
			<scrollpane>
				<table>
					<el4j:tablebinding src="m_persons" updateStrategy="read write" validation="true">
						<el4j:column label="@FirstName" property="firstName" editable="true" />
						<el4j:column label="@LastName" property="lastName" />
						<el4j:column label="@Age" property="age" class="java.lang.Integer" editable="true" />
					</el4j:tablebinding>
				</table>
			</scrollpane>
		</constraint>
		<constraint location="South">
			<combobox>
				<el4j:comboboxbinding src="m_person.children" property="firstName" />
			</combobox>
		</constraint>
	</borderlayout>
</panel>
