<?xml version="1.0" encoding="UTF-8"?>
<frame xmlns="http://cookxml.sf.net/cookswing/"
	xmlns:cx="http://cookxml.sf.net/"
	xmlns:cc="http://cookxml.sf.net/common/"
	xmlns:el4j="http://www.elca.ch/el4j/cookSwing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://cookxml.sf.net/cookswing/ schema/cookSwing.xsd
		http://www.elca.ch/el4j/cookSwing schema/el4jSwing.xsd
		http://cookxml.sf.net/common/ schema/cookXmlCommon.xsd
		http://cookxml.sf.net/ schema/cookXml.xsd"
	name="mainFrame" locationrelativeto="null">
	
	<menubar>
		<menu name="fileMenu">
			<menuitem action="quit" />
		</menu>
		<menu name="editMenu">
			<menuitem action="cut" />
			<menuitem action="copy" />
			<menuitem action="paste" />
			<menuitem action="delete" />
		</menu>
		<menu name="demoMenu">
			<menuitem action="showDemo1" />
			<menuitem action="showDemo2" />
			<menuitem action="showDemo3" />
			<menuitem action="showDemo4" />
			<menusplit />
			<menuitem action="showSearch" />
			<menuitem action="showRefDB" />
			<menusplit />
			<menuitem action="showDemo5" />
			<menuitem action="sendExampleEvent" />
			<menuitem action="showDemo6" />
		</menu>
		<el4j:windowmenu name="windowMenu" desktopPaneId="dp"/>
		<panel />
		<menu name="helpMenu">
			<menuitem action="help" />
			<menuitem action="toggleAdmin" />
			<menuitem action="about" />
		</menu>
	</menubar>

	<panel preferredsize="640,480">
		<borderlayout>
			<constraint location="North">
				<el4j:flattoolbar>
					<button action="quit" />
					<button action="cut" />
					<button action="copy" />
					<button action="paste" />
				</el4j:flattoolbar>
			</constraint>

			<constraint location="Center">
				<desktoppane cx:id="dp" cx:var="m_desktopPane" />
			</constraint>
		</borderlayout>
	</panel>

	<cc:noadd>
		<popupmenu cx:var="m_popup">
			<menuitem action="showDemo1" />
			<menuitem action="showDemo2" />
			<menusplit />
			<menuitem action="quit" />
		</popupmenu>
	</cc:noadd>
</frame>
