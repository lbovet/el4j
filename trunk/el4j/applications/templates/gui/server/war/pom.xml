<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- Version: $Revision$ -->
	<!-- URL: $URL$ -->
	<!-- Date: $Date$ -->
	<!-- Author: $Author$ -->

	<parent>
		<groupId>ch.elca.el4j.applications</groupId>
		<artifactId>swing-demo-server</artifactId>
		<version>2.0-SNAPSHOT</version>
	</parent>

	<artifactId>swing-demo-server-war</artifactId>
	<version>${version.application-refdb}</version>
	<packaging>war</packaging>
	<name>EL4J application swing demo server - war</name>
	<description>War part of Swing demo server module of the EL4J framework.</description>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<configuration>
					<deployer>
						<deployables>
							<deployable>
								<location>${jee-web.war.location}</location>
								<properties>
									<context>${jee-web.context.cargo}</context>
								</properties>
							</deployable>
						</deployables>
					</deployer>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>ch.elca.el4j.applications</groupId>
			<artifactId>swing-demo-server-jar</artifactId>
		</dependency>
		<dependency>
			<groupId>ch.elca.el4j.modules</groupId>
			<artifactId>module-web-war</artifactId>
			<type>war</type>
		</dependency>
	</dependencies>
</project>
