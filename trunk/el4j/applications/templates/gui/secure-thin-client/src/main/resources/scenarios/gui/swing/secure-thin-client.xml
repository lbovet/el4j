<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- $Revision$ -->
	<!-- $URL$ -->
	<!-- $Date$ -->
	<!-- $Author$ -->
	
	<!-- scan for all GUI components (scope-resolver is necessary to take @LazyInit into account -->
	<context:component-scan base-package="ch.elca.el4j.demos.secure.gui.forms"
		scope-resolver="ch.elca.el4j.core.context.annotations.LazyInitAwareScopeMetadataResolver" />
	
	<bean id="securityDemo" class="ch.elca.el4j.demos.secure.gui.SecurityDemo" />	
	<bean id="PrivateData" class="ch.elca.el4j.demos.secure.gui.PrivateData" lazy-init="true"/>
</beans>
