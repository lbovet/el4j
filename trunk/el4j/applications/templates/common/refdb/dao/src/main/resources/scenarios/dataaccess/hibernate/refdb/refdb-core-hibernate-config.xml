<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- $Revision$ -->
    <!-- $URL$ -->
    <!-- $Date$ -->
    <!-- $Author$ -->
    
    <bean id="keywordDao" parent="abstractDao" class="ch.elca.el4j.apps.keyword.dao.impl.hibernate.HibernateKeywordDao"/>
    <bean id="linkDao" parent="abstractDao" class="ch.elca.el4j.apps.refdb.dao.impl.hibernate.HibernateLinkDao"/>
    <bean id="formalPublicationDao" parent="abstractDao" class="ch.elca.el4j.apps.refdb.dao.impl.hibernate.HibernateFormalPublicationDao"/>
    <bean id="bookDao" parent="abstractDao" class="ch.elca.el4j.apps.refdb.dao.impl.hibernate.HibernateBookDao"/>
    <bean id="annotationDao" parent="abstractDao" class="ch.elca.el4j.apps.refdb.dao.impl.hibernate.HibernateAnnotationDao"/>
    <bean id="fileDao" parent="abstractDao" class="ch.elca.el4j.apps.refdb.dao.impl.hibernate.HibernateFileDao"/>
    <bean id="fileDescriptorViewDao" parent="abstractDao" class="ch.elca.el4j.apps.refdb.dao.impl.hibernate.HibernateFileDescriptorViewDao"/>
    
    <!-- Hibernate Session Factory Bean -->
    <!--  use a one that makes annotations possible -->
    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <!-- <property name="mappingResources">
            <list>
                <value>etc/hibernate/Keyword.hbm.xml</value>
                <value>etc/hibernate/Reference.hbm.xml</value>
                <value>etc/hibernate/Annotation.hbm.xml</value>
                <value>etc/hibernate/File.hbm.xml</value>
                <value>etc/hibernate/FileDescriptorView.hbm.xml</value>
            </list>
        </property>-->
        <property name="annotatedClasses">
            <list>
            	<value>ch.elca.el4j.apps.keyword.dom.Keyword</value>
            	<value>ch.elca.el4j.apps.refdb.dom.Annotation</value>
            	<value>ch.elca.el4j.apps.refdb.dom.File</value>
            	<value>ch.elca.el4j.apps.refdb.dom.FileDescriptorView</value>
            	<value>ch.elca.el4j.apps.refdb.dom.Reference</value>
            	<value>ch.elca.el4j.apps.refdb.dom.Link</value>
            	<value>ch.elca.el4j.apps.refdb.dom.FormalPublication</value>
            	<value>ch.elca.el4j.apps.refdb.dom.Book</value>
        	</list>
        </property>
        <property name="hibernateProperties">
            <props>
               	<prop key="hibernate.dialect">${databaseDialect}</prop>
                <prop key="hibernate.cache.provider_class">org.hibernate.cache.HashtableCacheProvider</prop>
                <prop key="hibernate.max_fetch_depth">3</prop>
            </props>
        </property>
        <property name="useTransactionAwareDataSource">
            <value>true</value>
        </property>
        <property name="dataSource">
            <ref bean="dataSource"/>
        </property>
    </bean>

</beans>
