<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    
    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->
    
    <bean id="xfireWithContextCalculatorExporter" class="ch.elca.el4j.services.remoting.RemotingServiceExporter">
        <property name="remoteProtocol">
            <ref bean="xFireProtocol" />
        </property>
        <property name="serviceInterface">
            <value>ch.elca.el4j.demos.remoting.Calculator</value>
        </property>
        <property name="serviceName">
            <value>/xFireCalculatorServiceWithContext</value>
        </property>
        <property name="service">
            <idref bean="xfireCalculatorImpl"/>
        </property>
    </bean>
    
    <bean id="xfireWithoutContextCalculatorExporter" class="org.codehaus.xfire.spring.remoting.XFireExporter">
        <property name="xfire">
            <ref bean="xfire"/>
        </property>
        <property name="serviceBean">
            <ref bean="xfireCalculatorImpl"/>
        </property>
        <property name="serviceFactory">
        	<ref bean="xfire.serviceFactory"/>
        </property>
        <property name="serviceClass">
            <value>ch.elca.el4j.demos.remoting.Calculator</value>
        </property>
    </bean>

    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="urlMap">
            <map>
                <entry key="/xFireCalculatorServiceWithoutContext">
                    <ref bean="xfireWithoutContextCalculatorExporter"/>
                </entry>
            </map>
        </property>
    </bean>
   
    <bean id="xfireCalculatorImpl" class="ch.elca.el4j.demos.remoting.impl.CalculatorImpl" />
</beans>