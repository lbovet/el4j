<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd http://java.sun.com/dtd/web-app_2_3.dtd" version="2.4">

    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->

    <!-- Used by all benchmarks -->
    <servlet>
        <servlet-name>benchmark</servlet-name>
        <servlet-class>
            org.springframework.web.servlet.DispatcherServlet
        </servlet-class>
        <load-on-startup>100</load-on-startup>
    </servlet>
    
    <!-- Used by Soap(Axis) benchmark -->
    <listener>
        <listener-class>org.apache.axis.transport.http.AxisHTTPSessionListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>AxisServlet</servlet-name>
        <servlet-class>org.apache.axis.transport.http.AxisServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <!-- Used to see all deployed services with its methods as list -->
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>/servlet/AxisServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <!-- Url to deployed services -->
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <!-- Default to 5 minute session timeouts -->
        <session-timeout>5</session-timeout>
    </session-config>
    
    <!-- Used by Hessian and Burlap benchmarks -->    
    <servlet-mapping>
        <servlet-name>benchmark</servlet-name>
        <url-pattern>*.Benchmark</url-pattern>
    </servlet-mapping>
    
    <!-- Used by xFire benchmark -->   
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:org/codehaus/xfire/spring/xfire.xml
		</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>xfire</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>xfire</servlet-name>
		<url-pattern>/xFireCalculatorServiceWithContext</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>xfire</servlet-name>
		<url-pattern>/xFireCalculatorServiceWithoutContext</url-pattern>
	</servlet-mapping>
	
</web-app>
