<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
    "http://www.springframework.org/dtd/spring-beans.dtd">
<!--
    Spring bean configuration file to setup rmi, hessian, burlap and soap. There
    is also a second soap protocol defined.
-->
<beans>
    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->
    
    <bean id="hessianProtocol" class="ch.elca.el4j.services.remoting.protocol.Hessian">
        <property name="serviceHost">
            <value>${j2ee-web.host}</value>
        </property>
        <property name="servicePort">
            <value>${j2ee-web.port}</value>
        </property>
        <property name="contextPath">
            <value>refdb-gui-tiger-server</value>
        </property>
    </bean>
</beans>
