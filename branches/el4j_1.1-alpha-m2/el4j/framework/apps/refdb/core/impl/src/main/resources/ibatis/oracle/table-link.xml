<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
	
<sqlMap namespace="refdb-core">
    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->

    <!-- 
        Link related invocations
    -->
    <!--
        Tag 'update' and not 'insert' is used, because no primary key must be 
        generated.
    -->
    <update id="insertLink">
        insert into LINKS (KEYTOREFERENCE, URL) values (#key#, #url#)
    </update>
    <update id="updateLink">
        update LINKS set URL=#url# where KEYTOREFERENCE=#key#
    </update>
</sqlMap>
