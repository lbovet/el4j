<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->

    <parent>
        <groupId>ch.elca.el4j</groupId>
        <artifactId>el4j-framework</artifactId>
        <version>1.1.0-SNAPSHOT</version>
    </parent>

    <groupId>ch.elca.el4j.modules</groupId>
    <artifactId>el4j-framework-modules</artifactId>
    <packaging>pom</packaging>
    <name>EL4J framework modules</name>
    <description>
        Modules of the EL4J framework.
    </description>
    <build>
        <plugins>
            <!-- Building -->
            <plugin>
                <groupId>ch.elca.el4j.plugins</groupId>
                <artifactId>maven-env-support-plugin</artifactId>
            </plugin>
            
            <!-- Packaging -->
            <plugin>
                <groupId>ch.elca.el4j.plugins</groupId>
                <artifactId>maven-manifest-decorator-plugin</artifactId>
            </plugin>
            
            <!-- IDE -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-eclipse-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>ch.elca.el4j.plugins</groupId>
                <artifactId>maven-checkclipse-helper-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
    <modules>
        <module>core</module>
        <module>daemon_manager</module>
        <module>env</module>
        <module>exception_handling</module>
        <module>hibernate</module>
        <module>ibatis</module>
        <module>jmx</module>
        <module>light_statistics</module>
        <module>remoting_core</module>
        <module>remoting_caucho</module>
        <module>remoting_soap</module>
        <!--module>remoting_ejb</module-->
        <module>security</module>
        <module>spring_rcp</module>
        <module>web</module>
    </modules>
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-project-info-reports-plugin</artifactId>
                <reportSets>
                    <reportSet>
                        <id>standardReports</id>
                        <reports>
                            <report>dependencies</report>
                            <report>dependency-convergence</report>
                            <report>issue-tracking</report>
                            <report>mailing-list</report>
                            <report>summary</report>
                            <report>project-team</report>
                            <report>index</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>
    </reporting>
</project>