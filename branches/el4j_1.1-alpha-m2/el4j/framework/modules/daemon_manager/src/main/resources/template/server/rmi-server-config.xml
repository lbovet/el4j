<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
    "http://www.springframework.org/dtd/spring-beans.dtd">
<!-- 
    Spring bean configuration file to export daemon manager with RMI.
-->
<beans>
    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->
    
    <bean id="rmiDaemonManagerOneExporter" 
        class="ch.elca.el4j.services.remoting.RemotingServiceExporter">
        <property name="remoteProtocol">
            <ref bean="rmiProtocol" />
        </property>
        <property name="serviceInterface">
            <value>ch.elca.el4j.services.daemonmanager.DaemonManager</value>
        </property>
        <property name="serviceName">
            <value>daemonManagerOne</value>
        </property>
        <property name="service">
            <ref bean="daemonManagerOne" />
        </property>
    </bean>
</beans>
