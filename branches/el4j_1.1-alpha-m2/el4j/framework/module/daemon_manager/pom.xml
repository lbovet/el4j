    <artifactId>module-daemon_manager</artifactId>
    <version>${version.module-daemon_manager}</version>
    <packaging>jar</packaging>
    <name>EL4J module daemon manager</name>
    <description>
        Module daemon manager of the EL4J framework.
    </description>
    <build>
        <!-- Temporary used until definitive movement to Maven2. -->
        <resources>
            <resource>
                <directory>../../../module/daemon_manager/conf</directory>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>../../../tests/daemon_manager/conf</directory>
            </testResource>
        </testResources>
        <sourceDirectory>../../../module/daemon_manager/java</sourceDirectory>
        <testSourceDirectory>../../../tests/daemon_manager/java</testSourceDirectory>
    </build>
    <dependencies>
        <!-- EL4J framework modules -->
        <dependency>
            <groupId>ch.elca.el4j</groupId>
            <artifactId>module-core</artifactId>
        </dependency>
    
        <!-- Third party tools -->
        <dependency>
            <groupId>tanukisoft</groupId>
            <artifactId>wrapper</artifactId>
            <version>3.2.0</version>
        </dependency>
    </dependencies>
