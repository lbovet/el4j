<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->

    <parent>
        <groupId>ch.elca.el4j</groupId>
        <artifactId>el4j-framework-modules</artifactId>
        <version>1.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>module-security</artifactId>
    <version>${version.module-security}</version>
    <packaging>jar</packaging>
    <name>EL4J module security</name>
    <description>
        Module security of the EL4J framework.
    </description>
    <build>
        <!-- Temporary used until definitive movement to Maven2. -->
        <resources>
            <resource>
                <directory>../../../module/security/conf</directory>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>../../../tests/security/conf</directory>
            </testResource>
        </testResources>
        <sourceDirectory>../../../module/security/java</sourceDirectory>
        <testSourceDirectory>../../../tests/security/java</testSourceDirectory>
    </build>
    <dependencies>
        <!-- EL4J framework modules -->
        <dependency>
            <groupId>ch.elca.el4j</groupId>
            <artifactId>module-core</artifactId>
        </dependency>
    
        <!-- Third party tools -->
        <dependency>
            <groupId>org.acegisecurity</groupId>
            <artifactId>acegi-security</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>net.sf.ehcache</groupId>
            <artifactId>ehcache</artifactId>
            <version>1.2</version>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
            <version>1.3</version>
        </dependency>
        <dependency>
            <groupId>oro</groupId>
            <artifactId>oro</artifactId>
            <version>2.0.8</version>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.4</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>
