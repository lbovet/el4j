<?xml version="1.0" encoding="UTF-8"?>
<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Version: $Revision$ -->
    <!-- URL: $URL$ -->
    <!-- Date: $Date$ -->
    <!-- Author: $Author$ -->

    <parent>
        <groupId>ch.elca.el4j.demos</groupId>
        <artifactId>el4j-framework-demos-daemon_manager</artifactId>
        <version>1.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>module-daemon_manager-demos-controller</artifactId>
    <version>${version.module-daemon_manager}</version>
    <packaging>jar</packaging>
    <name>EL4J controller module for daemon manager demos</name>
    <description>
        Demo controller module for daemon manager module of the EL4J framework.
    </description>
    <dependencies>
        <dependency>
            <groupId>ch.elca.el4j.demos</groupId>
            <artifactId>module-daemon_manager-demos-common</artifactId>
            <type>jar</type>
        </dependency>

        <!--
            The following dependency to module-jmx is not mandatory. It is only
            there to have a demo for the jmx support.
        -->
        <dependency>
            <groupId>ch.elca.el4j.modules</groupId>
            <artifactId>module-jmx</artifactId>
            <version>${version.module-jmx}</version>
            <type>jar</type>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <configuration>
                    <mainClass>ch.elca.el4j.demos.daemonmanager.Controller</mainClass>
                    <keepAlive>false</keepAlive>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
