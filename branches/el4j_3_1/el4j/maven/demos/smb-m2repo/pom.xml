<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<!-- Version: $Revision$ -->
	<!-- URL: $URL$ -->
	<!-- Date: $Date$ -->
	<!-- Author: $Author$ -->
	
	<parent>
		<groupId>ch.elca.el4j</groupId>
		<artifactId>el4j</artifactId>
		<version>3.1</version>
	</parent>
	
	<groupId>ch.elca.el4j.maven.repo</groupId>
	<artifactId>el4j-maven-repo</artifactId>
	<packaging>jar</packaging>
	<name>EL4J m2repo in smb share demo</name>
	<description>Example of how to store a maven 2 repository in a smb share</description>

	<!-- The repohelper plugin which uploads the artifacts -->
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>ch.elca.el4j.maven.plugins</groupId>
					<artifactId>maven-repohelper-plugin</artifactId>
					<configuration>
						<libraryDirectory>m2upload</libraryDirectory>
						<repositoryId>smbRepo</repositoryId>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	<!-- The information where to upload the artifacts -->
	<distributionManagement>
		<repository>
			<id>smbRepo</id>
			<url>file:////projServer/public/m2repository</url>
		</repository>
	</distributionManagement>
	
	
	<!-- Insert these entries to you project root pom.xml -->
