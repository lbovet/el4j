		</dependency>
	</dependencies>-->
	
	<!-- The information where to download the artifacts -->
	<repositories>
		<repository>
			<id>projectSmbRepo</id>
			<url>file:////projServer/public/m2repository</url>
		</repository>
	</repositories>
</project>
