<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- $Revision$ -->
    <!-- $URL$ -->
    <!-- $Date$ -->
    <!-- $Author$ -->
    
    <import
        resource="classpath:scenarios/common/remotingtests-xfire-protocol-config.xml" />

    <!-- Default XFire Setup -->
    <bean id="calculator"
        class="ch.elca.el4j.services.remoting.RemotingProxyFactoryBean">
        <property name="remoteProtocol">
            <ref bean="xFireProtocol" />
        </property>
        <property name="serviceInterface">
            <value>
                ch.elca.el4j.tests.remoting.service.Calculator
            </value>
        </property>
        <property name="serviceName">
            <value>Calculator.XFire.Remotingtests</value>
        </property>
    </bean>

    <!-- XFire Jaxb without annotations -->
    <bean id="calculatorJaxb"
        class="ch.elca.el4j.services.remoting.RemotingProxyFactoryBean">
        <property name="remoteProtocol">
            <ref bean="xFireProtocolJaxb" />
        </property>
        <property name="serviceInterface">
            <value>
                ch.elca.el4j.tests.remoting.service.Calculator
            </value>
        </property>
        <property name="serviceName">
            <value>Calculator.XFireJaxb.Remotingtests</value>
        </property>
    </bean>

    <!-- XFire Jaxb annotated -->
    <bean id="calculatorJaxbAnnotated"
        class="ch.elca.el4j.services.remoting.RemotingProxyFactoryBean">
        <property name="remoteProtocol">
            <ref bean="xFireProtocolJaxbAnnotated" />
        </property>
        <property name="serviceInterface">
            <value>
                ch.elca.el4j.tests.remoting.service.Calculator
            </value>
        </property>
        <property name="serviceName">
            <value>Calculator.XFireJaxbAnnotated.Remotingtests</value>
        </property>
    </bean>
</beans>


